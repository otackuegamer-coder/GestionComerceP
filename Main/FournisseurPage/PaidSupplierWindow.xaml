<Window x:Class="GestionComerce.Main.FournisseurPage.PaidSupplierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion des paiements" Height="672" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border Background="White" 
            CornerRadius="16" 
            BorderBrush="#E5E7EB" 
            BorderThickness="1" Margin="0,0,0,10">

        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,35">
                <StackPanel>
                    <TextBlock Text="Gestion des paiements" 
                              FontSize="28" 
                              FontWeight="SemiBold" 
                              Foreground="#1F2937"
                              Margin="0,0,0,6"/>
                    <TextBlock x:Name="SupplierNameLabel" 
                              Text="ABC Electronics"
                              FontSize="15" 
                              Foreground="#9CA3AF"/>
                </StackPanel>
                <Button x:Name="CloseButton" 
                       Content="✕" 
                       Width="36" 
                       Height="36"
                       HorizontalAlignment="Right"
                       Background="Transparent"
                       BorderThickness="0"
                       FontSize="18"
                       Foreground="#6B7280"
                       Cursor="Hand"
                       Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="18">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F3F4F6"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- Content with ScrollViewer -->
            <ScrollViewer Grid.Row="1" 
                         VerticalScrollBarVisibility="Auto" 
                         HorizontalScrollBarVisibility="Disabled">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Balance Overview Cards -->
                    <Grid Grid.Row="0" Margin="0,0,0,30" Name="Credit">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Total Credit Card -->
                        <Border Grid.Column="0" Name="Total"
                               Background="#F0F9FF" 
                               CornerRadius="12" 
                               Padding="24">
                            <StackPanel>
                                <TextBlock Text="Crédit total" 
                                          FontSize="13" 
                                          FontWeight="Medium" 
                                          Foreground="#0284C7" 
                                          Margin="0,0,0,10"/>
                                <TextBlock x:Name="TotalCreditLabel" 
                                          Text="2500.00 DH" 
                                          FontSize="24" 
                                          FontWeight="SemiBold" 
                                          Foreground="#0C4A6E"/>
                            </StackPanel>
                        </Border>

                        <!-- Total Paid Card -->
                        <Border Grid.Column="2" Name="Paid"
                               Background="#F0FDF4" 
                               CornerRadius="12" 
                               Padding="24">
                            <StackPanel>
                                <TextBlock Text="Total payé" 
                                          FontSize="13" 
                                          FontWeight="Medium" 
                                          Foreground="#10B981" 
                                          Margin="0,0,0,10"/>
                                <TextBlock x:Name="TotalPaidLabel" 
                                          Text="1250.00 DH" 
                                          FontSize="24" 
                                          FontWeight="SemiBold" 
                                          Foreground="#047857"/>
                            </StackPanel>
                        </Border>

                        <!-- Remaining Balance Card -->
                        <Border Grid.Column="4"
                               Background="#FFF7ED" 
                               CornerRadius="12" 
                               Padding="24">
                            <StackPanel>
                                <TextBlock Text="Solde restant" 
                                          FontSize="13" 
                                          FontWeight="Medium" 
                                          Foreground="#F59E0B" 
                                          Margin="0,0,0,10"/>
                                <TextBlock x:Name="DifferenceLabel" 
                                          Text="1250.00 DH" 
                                          FontSize="24" 
                                          FontWeight="SemiBold" 
                                          Foreground="#C2410C"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Payment Input Section -->
                    <Border Grid.Row="1" 
                           Background="#F9FAFB" 
                           CornerRadius="12" 
                           Padding="28" 
                           Margin="0,0,0,30">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" 
                                      Text="Effectuer un paiement" 
                                      FontSize="18" 
                                      FontWeight="SemiBold" 
                                      Foreground="#1F2937" 
                                      Margin="0,0,0,20"/>

                            <StackPanel Grid.Row="1" Margin="0,0,0,18">
                                <TextBlock Text="Montant du paiement" 
                                          FontWeight="Medium" 
                                          FontSize="13" 
                                          Foreground="#4B5563" 
                                          Margin="0,0,0,8"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" 
                                           Background="White" 
                                           CornerRadius="8" 
                                           BorderBrush="#E5E7EB" 
                                           BorderThickness="1"
                                           Margin="0,0,10,0">
                                        <TextBox x:Name="PaymentAmountTextBox" 
                                                MaxLength="18"
                                                Height="48"
                                                Padding="16,0"
                                                FontSize="15"
                                                BorderThickness="0"
                                                Background="Transparent"
                                                VerticalContentAlignment="Center"/>
                                    </Border>

                                    <TextBlock Grid.Column="1" 
                                              Text="DH" 
                                              FontSize="15" 
                                              FontWeight="Medium" 
                                              Foreground="#6B7280" 
                                              VerticalAlignment="Center"/>
                                </Grid>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button x:Name="PayMaxButton" 
                                       Content="Payer le maximum" 
                                       Height="38"
                                       Padding="20,0"
                                       Background="White"
                                       BorderThickness="1"
                                       BorderBrush="#E5E7EB"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       Foreground="#374151"
                                       Cursor="Hand"
                                       Margin="0,0,10,0"
                                       Click="PayMaxButton_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                               BorderBrush="{TemplateBinding BorderBrush}"
                                                               BorderThickness="{TemplateBinding BorderThickness}"
                                                               CornerRadius="8"
                                                               Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" 
                                                                            VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#F9FAFB"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Remaining Balance Display -->
                </Grid>
            </ScrollViewer>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,35,0,0">
                <Button x:Name="CancelButton" 
                       Content="Annuler" 
                       Width="110" 
                       Height="44"
                       Margin="0,0,12,0"
                       Background="White"
                       BorderThickness="1"
                       BorderBrush="#E5E7EB"
                       FontSize="14"
                       FontWeight="Medium"
                       Foreground="#374151"
                       Cursor="Hand"
                       Click="CancelButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               BorderBrush="{TemplateBinding BorderBrush}"
                                               BorderThickness="{TemplateBinding BorderThickness}"
                                               CornerRadius="8">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F9FAFB"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="ProcessPaymentButton" 
                       Content="Traiter le paiement" 
                       Width="160" 
                       Height="44"
                       Background="#10B981"
                       BorderThickness="0"
                       FontSize="14"
                       FontWeight="Medium"
                       Foreground="White"
                       Cursor="Hand"
                       Click="ProcessPaymentButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="8">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#059669"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>