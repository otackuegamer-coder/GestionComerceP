<Window x:Class="GestionComerce.Main.FournisseurPage.SupplierFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion des fournisseurs"
        Height="700" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <!-- Modern Color Palette -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#6366F1"/>
        <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#5855EB"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#6B7280"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="TextBrush" Color="#374151"/>
        <SolidColorBrush x:Key="PlaceholderBrush" Color="#9CA3AF"/>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Padding="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                <Setter Property="Background" Value="#FEFEFE"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#4F46E5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F9FAFB"/>
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#F3F4F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Label Style -->
        <Style x:Key="ModernLabel" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Title Style -->
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        </Style>

        <!-- Close Button Style -->
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FEF2F2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource BackgroundBrush}"
            CornerRadius="16"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar with Close Button -->
            <Grid Grid.Row="0" Margin="32,32,32,20">
                <TextBlock Text="Gestion des fournisseurs" 
                          Style="{StaticResource TitleStyle}"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center"/>
                <Button HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Width="32" Height="32"
                        Background="Transparent"
                        BorderThickness="0"
                        Content="✕"
                        FontSize="16"
                        Foreground="{StaticResource SecondaryBrush}"
                        Cursor="Hand"
                        Style="{StaticResource CloseButtonStyle}"
                        Click="CancelButton_Click"/>
            </Grid>

            <!-- Scrollable Content -->
            <ScrollViewer Grid.Row="1" 
                         VerticalScrollBarVisibility="Auto" 
                         HorizontalScrollBarVisibility="Disabled"
                         Padding="32,0,32,32">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Code Field -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock Text="Code" Style="{StaticResource ModernLabel}"/>
                        <TextBox x:Name="CodeTextBox" 
                                Style="{StaticResource ModernTextBox}" 
                                MaxLength="50"
                                Tag="Entrez le code du fournisseur..."/>
                    </StackPanel>

                    <!-- Name Field -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,20">
                        <TextBlock Text="Nom du fournisseur *" Style="{StaticResource ModernLabel}"/>
                        <TextBox x:Name="NameTextBox" 
                                Style="{StaticResource ModernTextBox}" 
                                MaxLength="100"
                                Tag="Entrez le nom du fournisseur..."/>
                    </StackPanel>

                    <!-- Phone Field -->
                    <StackPanel Grid.Row="2" Margin="0,0,0,20">
                        <TextBlock Text="Numéro de téléphone" Style="{StaticResource ModernLabel}"/>
                        <TextBox x:Name="PhoneTextBox" 
                                MaxLength="19"
                                Style="{StaticResource ModernTextBox}"
                                Tag="Entrez le numéro de téléphone..."/>
                    </StackPanel>

                    <!-- ICE Field -->
                    <StackPanel Grid.Row="3" Margin="0,0,0,20">
                        <TextBlock Text="ICE (Identifiant Commun de l'Entreprise)" Style="{StaticResource ModernLabel}"/>
                        <TextBox x:Name="ICETextBox" 
                                Style="{StaticResource ModernTextBox}" 
                                MaxLength="50"
                                Tag="Entrez le numéro ICE..."/>
                    </StackPanel>

                    <!-- Legal Status Field -->
                    <StackPanel Grid.Row="4" Margin="0,0,0,20">
                        <TextBlock Text="État juridique" Style="{StaticResource ModernLabel}"/>
                        <TextBox x:Name="EtatJuridicTextBox" 
                                Style="{StaticResource ModernTextBox}" 
                                MaxLength="100"
                                Tag="Entrez le statut juridique (ex : SARL, SA)..."/>
                    </StackPanel>

                    <!-- Company Headquarters Field -->
                    <StackPanel Grid.Row="5" Margin="0,0,0,20">
                        <TextBlock Text="Siège de l'entreprise" Style="{StaticResource ModernLabel}"/>
                        <TextBox x:Name="SiegeEntrepriseTextBox" 
                                Style="{StaticResource ModernTextBox}" 
                                MaxLength="200"
                                Tag="Entrez le siège de l'entreprise..."/>
                    </StackPanel>

                    <!-- Address Field -->
                    <StackPanel Grid.Row="6" Margin="0,0,0,20">
                        <TextBlock Text="Adresse" Style="{StaticResource ModernLabel}"/>
                        <TextBox x:Name="AdresseTextBox" 
                                Style="{StaticResource ModernTextBox}" 
                                MaxLength="200"
                                Tag="Entrez l'adresse..."/>
                    </StackPanel>

                    <!-- Balance Field -->
                    <StackPanel Grid.Row="7" Margin="0,0,0,32">
                        <TextBlock Text="Solde initial" Style="{StaticResource ModernLabel}"/>
                        <TextBox x:Name="BalanceTextBox" 
                                MaxLength="18"
                                Style="{StaticResource ModernTextBox}"
                                Tag="Entrez le solde initial..."/>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <Grid Grid.Row="8" Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="CancelButton" 
                                Grid.Column="0"
                                Content="Annuler" 
                                Style="{StaticResource SecondaryButton}"
                                Click="CancelButton_Click"/>

                        <Button x:Name="UpdateButton" 
                                Grid.Column="2"
                                Content="Enregistrer"
                                Style="{StaticResource PrimaryButton}"
                                Click="UpdateButton_Click"/>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>