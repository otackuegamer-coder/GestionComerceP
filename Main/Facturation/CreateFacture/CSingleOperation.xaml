<UserControl x:Class="GestionComerce.Main.Facturation.CreateFacture.CSingleOperation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GestionComerce.Main.ProjectManagment"
             mc:Ignorable="d" d:DesignWidth="800" Height="70">
    <Border Background="#F8FAFC" CornerRadius="8" Padding="13" Margin="0,0,0,0" MouseLeftButtonDown="MyBorder_MouseLeftButtonDown" Name="MyBorder">
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#10B981" Width="4" Height="40" CornerRadius="2" Margin="0,0,12,0" Name="SideColor"/>
            <StackPanel Grid.Column="1">
                <TextBlock Text="" Name="OperationType" FontWeight="SemiBold" FontSize="14" Foreground="#1F2937"/>
                <TextBlock Text="" FontSize="12" Foreground="#6B7280" Margin="0,2,0,0" Name="OperationName"/>
            </StackPanel>
            <TextBlock Grid.Column="2" Text="€157.45" Name="OperationPrice" FontSize="14" FontWeight="Bold" 
                  Foreground="#059669" VerticalAlignment="Center" Margin="0,0,16,0"/>
            <TextBlock Grid.Column="3" Text="Il y a 5 min" FontSize="12"  Name="OperationDate"
                  Foreground="#9CA3AF" VerticalAlignment="Center"/>
            <Button x:Name="btnArticle" Grid.Column="4" Margin="12,0,0,0"
        Content="Articles"
        Padding="24,12"
        FontSize="14"
        FontWeight="SemiBold"
        Foreground="White"
        Background="#4299E1"
        BorderThickness="0"
        Cursor="Hand" Click="btnArticle_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </Button.Resources>

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                                        <Border.Effect>
                                            <DropShadowEffect Color="#4299E1" 
                                                Opacity="0.3" 
                                                BlurRadius="12" 
                                                ShadowDepth="0"/>
                                        </Border.Effect>
                                        <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3182CE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2C5282"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</UserControl>
