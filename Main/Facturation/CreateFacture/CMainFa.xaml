                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="{StaticResource HoverBrush}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>-->

                    <!-- Title with Icon -->
                    <Grid Grid.Row="1" HorizontalAlignment="Left">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border Background="#EEF2FF" 
                                CornerRadius="12" 
                                Padding="12"
                                Margin="0,0,16,0"
                                VerticalAlignment="Center"
                                Grid.Column="0">
                            <TextBlock Text="📄" FontSize="28"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center" Grid.Column="1">
                            <TextBlock Text="Facture" 
                                       FontFamily="Segoe UI"
                                       FontSize="36" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="Créer et gérer vos factures" 
                                       FontSize="14"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </Grid>

                <!-- Right: Invoice Details -->
                <StackPanel Grid.Column="1" MinWidth="320" Margin="32,0,0,0" VerticalAlignment="Top">
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Numéro de Facture" Style="{StaticResource FieldLabel}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="txtInvoiceNumber" 
                                         Grid.Column="0"
                                         Style="{StaticResource ModernTextBox}" 
                                         MaxLength="20"
                                         ToolTip="Numéro unique de la facture"/>
                                <Button x:Name="btnGenerateInvoiceNumber"
                                        Grid.Column="1"
                                        Content="🔄"
                                        FontSize="16"
                                        ToolTip="Générer un numéro aléatoire"
                                        Background="{StaticResource PrimaryBrush}"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        Padding="10,8"
                                        Margin="8,0,0,0"
                                        Click="btnGenerateInvoiceNumber_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="border"
                                                                Background="{TemplateBinding Background}"
                                                                CornerRadius="8"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                                                            </Trigger>
                                                            <Trigger Property="IsPressed" Value="True">
                                                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="Date" Style="{StaticResource FieldLabel}"/>
                            <DatePicker x:Name="dpInvoiceDate" 
                                        Style="{StaticResource ModernDatePicker}"/>
                        </StackPanel>
                    </Grid>
                    <StackPanel>
                        <TextBlock Text="Type de Document" Style="{StaticResource FieldLabel}"/>
                        <ComboBox x:Name="cmbInvoiceType" 
                                  Style="{StaticResource ModernComboBox}"
                                  SelectedIndex="0" SelectionChanged="cmbInvoiceType_SelectionChanged">
                            <ComboBoxItem Content="Facture"/>
                            <ComboBoxItem Content="Belle"/>
                            <ComboBoxItem Content="Pro Format"/>
                            <ComboBoxItem Content="Expedition"/>
                            <ComboBoxItem Content="Credit"/>
                            <ComboBoxItem Content="Bon Commande"/>
                            <ComboBoxItem Content="Bon Livraison"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Scrollable Content Section -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="40,32">
            <StackPanel MaxWidth="1200">

                <!-- User Information Section -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <Grid Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Background="#DBEAFE" 
                                        CornerRadius="10" 
                                        Padding="10"
                                        Margin="0,0,12,0"
                                        Grid.Column="0">
                                    <TextBlock Text="👤" FontSize="20"/>
                                </Border>
                                <TextBlock Text="Informations de l'Utilisateur" 
                                           Style="{StaticResource SectionTitle}"
                                           VerticalAlignment="Center"
                                           Margin="0"
                                           Grid.Column="1"/>
                            </Grid>
                            <Button Content="Sauvegarder"
                                    Style="{StaticResource ModernButtonStyle}"
                                    Background="{StaticResource SuccessBrush}"
                                    Foreground="White"
                                    HorizontalAlignment="Right"
                                    Click="Button_Click"/>
                        </Grid>

                        <StackPanel Margin="0,0,0,18">
                            <TextBlock Text="Nom de l'Entreprise" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="txtUserName" 
                                     Style="{StaticResource ModernTextBox}" 
                                     MaxLength="50"/>
                        </StackPanel>

                        <Grid Margin="0,0,0,18">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Numéro ICE" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtUserICE" 
                                         Style="{StaticResource ModernTextBox}" 
                                         MaxLength="15"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Numéro VAT" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtUserVAT" 
                                         Style="{StaticResource ModernTextBox}" 
                                         MaxLength="15"/>
                            </StackPanel>
                        </Grid>

                        <StackPanel Margin="0,0,0,18">
                            <TextBlock Text="Téléphone" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="txtUserPhone" 
                                     Style="{StaticResource ModernTextBox}" 
                                     MaxLength="15"/>
                        </StackPanel>

                        <Grid Margin="0,0,0,18">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="État Juridique" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtUserEtatJuridique" 
                                         Style="{StaticResource ModernTextBox}" 
                                         MaxLength="30"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="ID de Société" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtUserIdSociete" 
                                         Style="{StaticResource ModernTextBox}" 
                                         MaxLength="25"/>
                            </StackPanel>
                        </Grid>

                        <StackPanel Margin="0,0,0,18">
                            <TextBlock Text="Siège d'Entreprise" Style="{StaticResource FieldLabel}"/>
                            <ComboBox x:Name="cmbUserSiegeEntreprise" 
                                      Style="{StaticResource ModernComboBox}"
                                      SelectedIndex="0">
                                <ComboBoxItem Content="National"/>
                                <ComboBoxItem Content="International"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,18">
                            <TextBlock Text="Adresse Complète" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="txtUserAddress" 
                                     MaxLength="100"
                                     Style="{StaticResource ModernTextBox}"
                                     Height="90"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalContentAlignment="Top"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Logo de l'Entreprise" Style="{StaticResource FieldLabel}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="txtLogoPath" 
                                         Grid.Column="0"
                                         Style="{StaticResource ModernTextBox}"
                                         IsReadOnly="True"
                                         Background="#F8FAFC"/>
                                <Button Grid.Column="1" 
                                        x:Name="btnBrowseLogo" 
                                        Content="📁 Parcourir" 
                                        Style="{StaticResource ModernButtonStyle}"
                                        Background="{StaticResource PrimaryBrush}" 
                                        Foreground="White"
                                        Margin="12,0,0,0"
                                        Click="BtnBrowseLogo_Click"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Client Information Section -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <Grid Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Background="#DCFCE7" 
                                        CornerRadius="10" 
                                        Padding="10"
                                        Margin="0,0,12,0"
                                        Grid.Column="0">
                                    <TextBlock Text="🏢" FontSize="20"/>
                                </Border>
                                <TextBlock Text="Informations du Client" 
                                           Style="{StaticResource SectionTitle}"
                                           VerticalAlignment="Center"
                                           Margin="0"
                                           Grid.Column="1"/>
                            </Grid>
                            <Button x:Name="btnSelectClient"
                                    Content="🔍 Sélectionner Client"
                                    Style="{StaticResource ModernButtonStyle}"
                                    Background="{StaticResource PrimaryBrush}"
                                    Foreground="White"
                                    HorizontalAlignment="Right"
                                    Click="btnSelectClient_Click"/>
                        </Grid>

                        <StackPanel Margin="0,0,0,18">
                            <TextBlock Text="Nom du Client" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="txtClientName" 
                                     Style="{StaticResource ModernTextBox}" 
                                     MaxLength="50"/>
                        </StackPanel>

                        <Grid Margin="0,0,0,18">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Numéro ICE" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtClientICE" 
                                         Style="{StaticResource ModernTextBox}" 
                                         MaxLength="15"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Numéro VAT" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtClientVAT" 
                                         Style="{StaticResource ModernTextBox}" 
                                         MaxLength="15"/>
                            </StackPanel>
                        </Grid>

                        <StackPanel Margin="0,0,0,18">
                            <TextBlock Text="Téléphone" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="txtClientPhone" 
                                     Style="{StaticResource ModernTextBox}" 
                                     MaxLength="15"/>
                        </StackPanel>

                        <Grid Margin="0,0,0,18">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="État Juridique" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtClientEtatJuridique" 
                                         Style="{StaticResource ModernTextBox}" 
                                         MaxLength="30"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="ID de Société" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtClientIdSociete" 
                                         Style="{StaticResource ModernTextBox}" 
                                         MaxLength="25"/>
                            </StackPanel>
                        </Grid>

                        <StackPanel Margin="0,0,0,18">
                            <TextBlock Text="Siège d'Entreprise" Style="{StaticResource FieldLabel}"/>
                            <ComboBox x:Name="cmbClientSiegeEntreprise" 
                                      Style="{StaticResource ModernComboBox}"
                                      SelectedIndex="0">
                                <ComboBoxItem Content="National"/>
                                <ComboBoxItem Content="International"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Adresse Complète" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="txtClientAddress" 
                                     MaxLength="100"
                                     Style="{StaticResource ModernTextBox}"
                                     Height="90"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalContentAlignment="Top"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Invoice Information Section -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <Grid Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Background="#FEF3C7" 
                                        CornerRadius="10" 
                                        Padding="10"
                                        Margin="0,0,12,0"
                                        Grid.Column="0">
                                    <TextBlock Text="💰" FontSize="20"/>
                                </Border>
                                <TextBlock Text="Informations de Facturation" 
                                           Style="{StaticResource SectionTitle}"
                                           VerticalAlignment="Center"
                                           Margin="0"
                                           Grid.Column="1"/>
                            </Grid>
                            <Button x:Name="btnSelectOperation"
                                    Content="➕ Ajouter Opération"
                                    Style="{StaticResource ModernButtonStyle}"
                                    Background="{StaticResource SuccessBrush}"
                                    Foreground="White"
                                    Click="btnSelectOperation_Click" Margin="467,0,0,0"/>
                        </Grid>

                        <!-- Operations Container -->
                        <Border Background="{StaticResource InputBrush}" 
                                CornerRadius="12" 
                                Padding="3"
                                Margin="0,0,0,20"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1.5">
                            <StackPanel x:Name="OperationContainer"/>
                        </Border>

                        <!-- Billing Details Grid -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left Column -->
                            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                <StackPanel Margin="0,0,0,18">
                                    <TextBlock Text="État de Facture" Style="{StaticResource FieldLabel}"/>
                                    <ComboBox x:Name="EtatFacture" 
                                              Style="{StaticResource ModernComboBox}"
                                              SelectedIndex="0" SelectionChanged="EtatFacture_SelectionChanged">
                                        <ComboBoxItem Content="Normal"/>
                                        <ComboBoxItem Content="Annulée"/>
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,18">
                                    <TextBlock Text="Devise" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="txtCurrency" 
                                             MaxLength="10"
                                             Style="{StaticResource ModernTextBox}"
                                             Text="MAD"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,18">
                                    <TextBlock Text="Taux TVA (%)" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="txtTVARate" IsEnabled="False"
                                             PreviewTextInput="DecimalTextBox_PreviewTextInput" 
                                             MaxLength="6"
                                             DataObject.Pasting="DecimalTextBox_Pasting" 
                                             Style="{StaticResource ModernTextBox}" 
                                             Text="0" 
                                             TextChanged="txtTVARate_TextChanged"/>
                                </StackPanel>


                                <StackPanel Margin="0,0,0,18">
                                    <TextBlock Text="Montant Total HT" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="txtTotalAmount" 
                                             Style="{StaticResource ModernTextBox}" 
                                             IsEnabled="False"
                                             TextChanged="txtTotalAmount_TextChanged" 
                                             MaxLength="20"
                                             FontWeight="SemiBold"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,18">
                                    <TextBlock Text="Montant TVA" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="txtTVAAmount" 
                                             Style="{StaticResource ModernTextBox}" 
                                             IsEnabled="False"
                                             MaxLength="20"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,18">
                                    <TextBlock Text="Montant Total TTC" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="txtApresTVAAmount" 
                                             Style="{StaticResource ModernTextBox}" 
                                             IsEnabled="False"
                                             MaxLength="20"
                                             FontWeight="Bold"
                                             FontSize="16"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,18">
                                    <TextBlock Text="Remise" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="Remise" 
                                             PreviewTextInput="DecimalTextBox_PreviewTextInput"
                                             TextChanged="Remise_TextChanged"
                                             DataObject.Pasting="DecimalTextBox_Pasting" 
                                             Style="{StaticResource ModernTextBox}" />
                                </StackPanel>

                                <StackPanel Margin="0,0,0,18">
                                    <TextBlock Text="Montant Total TTC apres Remise" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="txtApresRemiseAmount" 
                                             Style="{StaticResource ModernTextBox}" 
                                             IsEnabled="False"
                                             MaxLength="20"
                                             FontWeight="Bold"
                                             FontSize="16" />
                                </StackPanel>

                                <StackPanel>
                                    <TextBlock Text="Index de Facture" Style="{StaticResource FieldLabel}"/>
                                    <ComboBox x:Name="IndexFacture" 
                                              Style="{StaticResource ModernComboBox}"
                                              SelectedIndex="0">
                                        <ComboBoxItem Content="0"/>
                                        <ComboBoxItem Content="1"/>
                                    </ComboBox>
                                </StackPanel>
                            </StackPanel>

                            <!-- Right Column -->
                            <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                <TextBlock Text="Description / Notes" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtDescription" 
                                         Style="{StaticResource ModernTextBox}"
                                         Height="480"
                                         MaxLength="500"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         VerticalContentAlignment="Top"
                                         VerticalScrollBarVisibility="Auto"
                                         Padding="16"/>
                                <TextBlock Text="Object" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtObject" Width="300" Style="{StaticResource ModernTextBox}"/>
                                <TextBlock Text="Method de Payment" Style="{StaticResource FieldLabel}"/>
                                <ComboBox x:Name="cmbPaymentMethod"
                                      Style="{StaticResource ModernComboBox}"
          SelectionChanged="cmbPaymentMethod_SelectionChanged"/>
                                <Label x:Name="lblChequeReference" Content="Référence de Chèque:" 
       Visibility="Collapsed"/>
                                <TextBox x:Name="txtChequeReference" Style="{StaticResource ModernTextBox}"
         Visibility="Collapsed"/>
                                <TextBlock Text="Montant avec lettre" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtAmountInLetters" Style="{StaticResource ModernTextBox}" Padding="0"
         IsReadOnly="True" TextWrapping="Wrap" Height="60"/>
                                <TextBlock Text="Nom que Donne la Facture:" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtGivenBy" Style="{StaticResource ModernTextBox}"/>
                                <TextBlock Text="Nom que Recoit la Facture:" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtReceivedBy" Style="{StaticResource ModernTextBox}"/>
                                <TextBlock Text="Référence de Client:" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="txtClientReference" IsReadOnly="True" Style="{StaticResource ModernTextBox}" Height="27"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Action Buttons Section -->
                <Border Background="{StaticResource SurfaceBrush}" 
                        Padding="24,20"
                        Margin="0,0,0,40"
                        CornerRadius="12"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1">
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        <Button x:Name="btnPreview"
                                Content="👁️ Aperçu"
                                Style="{StaticResource ModernButtonStyle}"
                                Background="{StaticResource AccentBrush}"
                                Foreground="White"
                                MinWidth="140"
                                FontSize="15"
                                Click="btnPreview_Click"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>