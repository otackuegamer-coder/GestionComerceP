<Window x:Class="GestionComerce.Main.Facturation.CreateFacture.WMouvments"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rechercher"
        SizeToContent="Height"
        MaxHeight="500"
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Close Button Style -->
        <Style x:Key="CloseButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#718096"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F7FAFC"/>
                    <Setter Property="Foreground" Value="#E53E3E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Save Button Style -->
        <Style x:Key="SaveButton" TargetType="Button">
            <Setter Property="Background" Value="#4FD1C7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#38B2AC"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#319795"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="12" Background="Transparent" Padding="15">
        <Border CornerRadius="12" Background="White">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.25" BlurRadius="40" ShadowDepth="5"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header with Close Button -->
                <Grid Grid.Row="0" Margin="20,15,20,10">
                    <!-- Title -->
                    <TextBlock Text="Articles de l'opération"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#2D3748"
                               VerticalAlignment="Center"/>

                    <!-- Close Button -->
                    <Button x:Name="btnClose"
                            Content="✕"
                            Style="{StaticResource CloseButton}"
                            HorizontalAlignment="Right"
                            Click="btnClose_Click_1"/>
                </Grid>

                <!-- Column Headers -->
                <Grid x:Name="HeaderGrid" 
                      Grid.Row="1" 
                      Margin="40,0,40,10"
                      Background="#F7FAFC"
                      Height="35">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="90"/>
                    </Grid.ColumnDefinitions>

                    <!-- Article Name Header -->
                    <TextBlock Grid.Column="0"
                               Text="Article"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="#4A5568"
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"/>

                    <!-- Price Header -->
                    <TextBlock Grid.Column="1"
                               Text="Prix"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="#4A5568"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>

                    <!-- TVA Header -->
                    <TextBlock Grid.Column="2"
                               Text="TVA %"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="#4A5568"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>

                    <!-- Quantity Header -->
                    <TextBlock Grid.Column="3"
                               Text="Quantité"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="#4A5568"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>

                    <!-- Expedition Total Header (only visible in Expedition mode) -->
                    <TextBlock x:Name="TxtExpeditionTotalHeader"
                               Grid.Column="4"
                               Text="Qté Totale"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="#4A5568"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Visibility="Collapsed"/>

                    <!-- Initial Quantity Header -->
                    <TextBlock Grid.Column="5"
                               Text="Qté Initiale"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="#4A5568"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </Grid>

                <!-- ScrollViewer with Empty StackPanel -->
                <ScrollViewer Grid.Row="2" 
                             VerticalScrollBarVisibility="Auto"
                             Margin="20,0,20,10">
                    <StackPanel x:Name="MouvmentsContainer">
                        <!-- Content will be added here dynamically -->
                    </StackPanel>
                </ScrollViewer>

                <!-- Footer with Save Button -->
                <Border Grid.Row="3" 
                        Background="#F7FAFC" 
                        Padding="20,10"
                        BorderBrush="#E2E8F0"
                        BorderThickness="0,1,0,0">
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        <!-- Save Button -->
                        <Button x:Name="btnSaveExpedition"
                                Content="Enregistrer"
                                Style="{StaticResource SaveButton}"
                                Click="btnSaveExpedition_Click"
                                Visibility="Visible"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Border>
</Window>