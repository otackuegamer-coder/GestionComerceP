<Window x:Class="GestionComerce.Main.Facturation.HistoriqueFacture.WEditInvoice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modifier la Facture" 
        Height="900" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Modern Input Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Padding="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#3B82F6"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#3B82F6"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Modern DatePicker Style -->
        <Style x:Key="ModernDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Primary Button -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2563EB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1D4ED8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E5E7EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Label Style -->
        <Style x:Key="ModernLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <!-- Section Title Style -->
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
    </Window.Resources>

    <Border Background="#F9FAFB" CornerRadius="12" Margin="20">
        <Border.Effect>
            <DropShadowEffect Color="#000000" Opacity="0.3" BlurRadius="30" ShadowDepth="0"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="White" CornerRadius="12,12,0,0" Padding="32,24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="✏️ Modifier la Facture" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="#111827"/>
                        <TextBlock x:Name="txtInvoiceNumber"
                                   Text="N° FAC-20241208-10001" 
                                   FontSize="14" 
                                   Foreground="#6B7280"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <Button Grid.Column="1" 
                            Content="✕" 
                            Width="40" 
                            Height="40"
                            Background="Transparent"
                            Foreground="#6B7280"
                            BorderThickness="0"
                            FontSize="20"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="btnClose_Click"
                            VerticalAlignment="Center">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8"
                                                    Width="{TemplateBinding Width}"
                                                    Height="{TemplateBinding Height}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FEE2E2"/>
                                        <Setter Property="Foreground" Value="#DC2626"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="White">
                <StackPanel Margin="32,24">

                    <!-- Invoice Information -->
                    <Border Background="#F9FAFB" CornerRadius="12" Padding="24" Margin="0,0,0,24">
                        <StackPanel>
                            <TextBlock Text="📄 Informations de la Facture" Style="{StaticResource SectionTitle}"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="12"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Row 1: Invoice Number, Date, Type -->
                                <StackPanel Grid.Row="0" Grid.Column="0">
                                    <TextBlock Text="Numéro de Facture" Style="{StaticResource ModernLabel}"/>
                                    <TextBox x:Name="txtEditInvoiceNumber" Style="{StaticResource ModernTextBox}"/>
                                </StackPanel>

                                <StackPanel Grid.Row="0" Grid.Column="2">
                                    <TextBlock Text="Date" Style="{StaticResource ModernLabel}"/>
                                    <DatePicker x:Name="dpEditInvoiceDate" Style="{StaticResource ModernDatePicker}"/>
                                </StackPanel>

                                <StackPanel Grid.Row="0" Grid.Column="4">
                                    <TextBlock Text="Type" Style="{StaticResource ModernLabel}"/>
                                    <ComboBox x:Name="cmbEditInvoiceType" Style="{StaticResource ModernComboBox}">
                                        <ComboBoxItem Content="Facture"/>
                                        <ComboBoxItem Content="Expedition"/>
                                        <ComboBoxItem Content="Devis"/>
                                    </ComboBox>
                                </StackPanel>

                                <!-- Row 2: New Fields -->
                                <StackPanel Grid.Row="2" Grid.Column="0">
                                    <TextBlock Text="Objet" Style="{StaticResource ModernLabel}"/>
                                    <TextBox x:Name="txtEditObjet" Style="{StaticResource ModernTextBox}"/>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.Column="2">
                                    <TextBlock Text="Référence Client" Style="{StaticResource ModernLabel}"/>
                                    <TextBox x:Name="txtEditReferenceClient" Style="{StaticResource ModernTextBox}"/>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.Column="4">
                                    <TextBlock Text="Méthode de Paiement" Style="{StaticResource ModernLabel}"/>
                                    <TextBox x:Name="txtEditPaymentMethod" Style="{StaticResource ModernTextBox}"/>
                                </StackPanel>
                            </Grid>

                            <!-- Additional Fields Section -->
                            <Grid Margin="0,12,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Montant en Lettres" Style="{StaticResource ModernLabel}"/>
                                    <TextBox x:Name="txtEditNumberLetters" Style="{StaticResource ModernTextBox}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Donneur de Facture" Style="{StaticResource ModernLabel}"/>
                                    <TextBox x:Name="txtEditNameFactureGiven" Style="{StaticResource ModernTextBox}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="4">
                                    <TextBlock Text="Receveur de Facture" Style="{StaticResource ModernLabel}"/>
                                    <TextBox x:Name="txtEditNameFactureReceiver" Style="{StaticResource ModernTextBox}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Client Information -->
                    <Border Background="#EFF6FF" CornerRadius="12" Padding="24" Margin="0,0,0,24">
                        <StackPanel>
                            <TextBlock Text="👤 Informations Client" Style="{StaticResource SectionTitle}"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="12"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="12"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Row 1 -->
                                <StackPanel Grid.Row="0" Grid.Column="0">
                                    <TextBlock Text="Nom du Client" Style="{StaticResource ModernLabel}"/>
                                    <TextBox x:Name="txtEditClientName" Style="{StaticResource ModernTextBox}"/>
                                </StackPanel>

                                <StackPanel Grid.Row="0" Grid.Column="2">
                                    <TextBlock Text="ICE" Style="{StaticResource ModernLabel}"/>
                                    <TextBox x:Name="txtEditClientICE" Style="{StaticResource ModernTextBox}"/>
                                </StackPanel>

                                <!-- Row 2 -->
                                <StackPanel Grid.Row="2" Grid.Column="0">
                                    <TextBlock Text="VAT" Style="{StaticResource ModernLabel}"/>
                                    <TextBox x:Name="txtEditClientVAT" Style="{StaticResource ModernTextBox}"/>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.Column="2">
                                    <TextBlock Text="Téléphone" Style="{StaticResource ModernLabel}"/>
                                    <TextBox x:Name="txtEditClientPhone" Style="{StaticResource ModernTextBox}"/>
                                </StackPanel>

                                <!-- Row 3 -->
                                <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3">
                                    <TextBlock Text="Adresse" Style="{StaticResource ModernLabel}"/>
                                    <TextBox x:Name="txtEditClientAddress" 
                                             Style="{StaticResource ModernTextBox}"
                                             Height="80"
                                             TextWrapping="Wrap"
                                             AcceptsReturn="True"
                                             VerticalContentAlignment="Top"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Articles Section -->
                    <Border Background="#F0FDF4" CornerRadius="12" Padding="24" Margin="0,0,0,24">
                        <StackPanel>
                            <Grid Margin="0,0,0,16">
                                <TextBlock Text="📦 Articles" Style="{StaticResource SectionTitle}" HorizontalAlignment="Left"/>
                                <Button Content="+ Ajouter Article" 
                                        Style="{StaticResource PrimaryButton}"
                                        Padding="16,8"
                                        FontSize="13"
                                        HorizontalAlignment="Right"
                                        Click="btnAddArticle_Click"/>
                            </Grid>

                            <DataGrid x:Name="dgEditArticles"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      HeadersVisibility="Column"
                                      Background="White"
                                      BorderBrush="#E5E7EB"
                                      BorderThickness="1"
                                      GridLinesVisibility="Horizontal"
                                      RowHeight="50"
                                      MaxHeight="300">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Article" Binding="{Binding ArticleName}" Width="2*"/>
                                    <DataGridTextColumn Header="Prix Unitaire (DH)" Binding="{Binding PrixUnitaire, StringFormat={}{0:N2}}" Width="*"/>
                                    <DataGridTextColumn Header="Quantité" Binding="{Binding Quantite, StringFormat={}{0:N2}}" Width="*"/>
                                    <DataGridTextColumn Header="TVA (%)" Binding="{Binding TVA, StringFormat={}{0:N2}}" Width="*"/>
                                    <DataGridTextColumn Header="Total HT (DH)" Binding="{Binding TotalHT, StringFormat={}{0:N2}}" Width="*" IsReadOnly="True"/>
                                    <DataGridTemplateColumn Header="Actions" Width="100">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="🗑️" 
                                                        Background="#FEE2E2"
                                                        Foreground="#DC2626"
                                                        BorderThickness="0"
                                                        Padding="8,4"
                                                        Cursor="Hand"
                                                        Click="btnDeleteArticle_Click"
                                                        Tag="{Binding}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>

                    <!-- Financial Summary -->
                    <Border Background="#FEF3C7" CornerRadius="12" Padding="24">
                        <StackPanel>
                            <TextBlock Text="💰 Résumé Financier" Style="{StaticResource SectionTitle}"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="12"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="12"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Total HT -->
                                <StackPanel Grid.Row="0" Grid.Column="0">
                                    <TextBlock Text="Total HT" Style="{StaticResource ModernLabel}"/>
                                    <TextBox x:Name="txtEditTotalHT" 
                                             Style="{StaticResource ModernTextBox}"
                                             IsReadOnly="True"
                                             Background="#F9FAFB"/>
                                </StackPanel>

                                <!-- TVA Rate -->
                                <StackPanel Grid.Row="0" Grid.Column="2">
                                    <TextBlock Text="Taux TVA (%)" Style="{StaticResource ModernLabel}"/>
                                    <TextBox x:Name="txtEditTVARate" 
                                             Style="{StaticResource ModernTextBox}"
                                             TextChanged="FinancialField_Changed"/>
                                </StackPanel>

                                <!-- TVA Amount -->
                                <StackPanel Grid.Row="2" Grid.Column="0">
                                    <TextBlock Text="Montant TVA" Style="{StaticResource ModernLabel}"/>
                                    <TextBox x:Name="txtEditTVAAmount" 
                                             Style="{StaticResource ModernTextBox}"
                                             IsReadOnly="True"
                                             Background="#F9FAFB"/>
                                </StackPanel>

                                <!-- Remise -->
                                <StackPanel Grid.Row="2" Grid.Column="2">
                                    <TextBlock Text="Remise (DH)" Style="{StaticResource ModernLabel}"/>
                                    <TextBox x:Name="txtEditRemise" 
                                             Style="{StaticResource ModernTextBox}"
                                             Text="0.00"
                                             TextChanged="FinancialField_Changed"/>
                                </StackPanel>

                                <!-- Total TTC -->
                                <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3">
                                    <TextBlock Text="Total TTC" Style="{StaticResource ModernLabel}"/>
                                    <Border Background="White" 
                                            BorderBrush="#3B82F6" 
                                            BorderThickness="2" 
                                            CornerRadius="8" 
                                            Padding="12,10">
                                        <TextBlock x:Name="txtEditTotalTTC" 
                                                   Text="0.00 DH"
                                                   FontSize="24"
                                                   FontWeight="Bold"
                                                   Foreground="#3B82F6"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Description -->
                    <Border Background="White" CornerRadius="12" Padding="24" Margin="0,24,0,0" BorderBrush="#E5E7EB" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="📝 Description" Style="{StaticResource SectionTitle}"/>
                            <TextBox x:Name="txtEditDescription"
                                     Style="{StaticResource ModernTextBox}"
                                     Height="100"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalContentAlignment="Top"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- Footer Buttons -->
            <Border Grid.Row="2" Background="White" CornerRadius="0,0,12,12" Padding="32,20" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0">
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button Content="👁️ Prévisualiser" 
                                Style="{StaticResource SecondaryButton}"
                                Margin="0,0,12,0"
                                Click="btnPreview_Click"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Annuler" 
                                Style="{StaticResource SecondaryButton}"
                                Margin="0,0,12,0"
                                Click="btnCancel_Click"/>
                        <Button Content="💾 Enregistrer les modifications" 
                                Style="{StaticResource PrimaryButton}"
                                Click="btnSave_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>