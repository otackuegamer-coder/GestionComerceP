<UserControl x:Class="Superete.Main.Settings.ParametresGenerauxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="900">

    <UserControl.Resources>
        <!-- Define ModernShadow FIRST before it's used -->
        <DropShadowEffect x:Key="ModernShadow" BlurRadius="15" ShadowDepth="2" Opacity="0.1" Color="#000000"/>

        <!-- Styles modernes -->
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E8E8E8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.08" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#1a1a1a"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="SectionDescription" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="LineHeight" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                        Grid.Column="2"
                                        Focusable="False"
                                        IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="Border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="#D1D5DB"
                                                BorderThickness="1"
                                                CornerRadius="8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0"
                                                                Margin="14,0"
                                                                HorizontalAlignment="Left"
                                                                VerticalAlignment="Center"
                                                                Content="{Binding SelectionBoxItem, RelativeSource={RelativeSource AncestorType=ComboBox}}"/>
                                                <Path Grid.Column="1"
                                                      Data="M 0 0 L 4 4 L 8 0 Z"
                                                      Fill="#6B7280"
                                                      Margin="0,0,12,0"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Right"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="BorderBrush" Value="#9CA3AF"/>
                                            </Trigger>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="Border" Property="BorderBrush" Value="#6366F1"/>
                                                <Setter TargetName="Border" Property="BorderThickness" Value="2"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="300">
                                    <Border Background="White"
                                            BorderBrush="#E5E7EB"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Margin="0,4,0,0">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.1" Color="#000000"/>
                                        </Border.Effect>
                                        <ScrollViewer Margin="0,2"
                                                     SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True"
                                                       KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="SnapsToDevicePixels" Value="True"/>
                        <Setter Property="Padding" Value="14,10"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="#374151"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border Name="Border"
                                            Padding="{TemplateBinding Padding}"
                                            Background="{TemplateBinding Background}"
                                            SnapsToDevicePixels="True">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsHighlighted" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#F3F4F6"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#EEF2FF"/>
                                            <Setter Property="Foreground" Value="#6366F1"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernCheckBox" TargetType="CheckBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,4"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#047857"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F9FAFB"/>
                    <Setter Property="BorderBrush" Value="#9CA3AF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="IconText" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
        </Style>

    </UserControl.Resources>

    <Border Background="#F9FAFB">
        <Grid Margin="40,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- En-tête moderne avec gradient -->
            <Border Grid.Row="0" Background="White" CornerRadius="12" Padding="30,24" Margin="0,0,0,30">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.08" Color="#000000"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" 
                            Width="48" Height="48" 
                            Background="#EEF2FF" 
                            CornerRadius="12"
                            Margin="0,0,20,0">
                        <TextBlock Text="&#xE713;" 
                                   FontFamily="Segoe MDL2 Assets" 
                                   FontSize="24" 
                                   Foreground="#6366F1"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Paramètres Généraux" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="#111827"/>
                        <TextBlock Text="Personnalisez votre expérience et configurez les options par défaut" 
                                   FontSize="14" 
                                   Foreground="#6B7280"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Contenu avec ScrollViewer -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- Affichage du clavier -->
                    <Border Style="{StaticResource ModernCard}">
                        <StackPanel>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="&#xE765;" Style="{StaticResource IconText}" Foreground="#8B5CF6"/>
                                <TextBlock Grid.Column="1" Text="Affichage du Clavier Virtuel" Style="{StaticResource SectionTitle}"/>
                            </Grid>
                            <TextBlock Style="{StaticResource SectionDescription}"
                                       Text="Choisissez le comportement du clavier tactile lors de la saisie dans les champs de texte"/>
                            <ComboBox x:Name="CbAfficherClavier" 
                                      Style="{StaticResource ModernComboBox}"
                                      Width="320" 
                                      HorizontalAlignment="Left">
                                <ComboBoxItem Content="🟢  Toujours afficher le clavier"/>
                                <ComboBoxItem Content="🔴  Ne jamais afficher le clavier"/>
                                <ComboBoxItem Content="🟡  Automatique (au clic sur le champ)"/>
                            </ComboBox>
                        </StackPanel>
                    </Border>

                    <!-- Étiquettes dans factures -->
                    <Border Style="{StaticResource ModernCard}">
                        <StackPanel>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="&#xE8A5;" Style="{StaticResource IconText}" Foreground="#F59E0B"/>
                                <TextBlock Grid.Column="1" Text="Affichage des Factures" Style="{StaticResource SectionTitle}"/>
                            </Grid>
                            <TextBlock Style="{StaticResource SectionDescription}"
                                       Text="Optimisez l'apparence de vos documents en masquant les champs vides"/>
                            <CheckBox x:Name="ChkMasquerEtiquettesVides" 
                                      Style="{StaticResource ModernCheckBox}"
                                      Content="Masquer automatiquement les étiquettes vides dans les factures"/>
                        </StackPanel>
                    </Border>

                    <!-- Gestion des stocks -->
                    <Border Style="{StaticResource ModernCard}">
                        <StackPanel>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="&#xE8F1;" Style="{StaticResource IconText}" Foreground="#EF4444"/>
                                <TextBlock Grid.Column="1" Text="Gestion Automatique des Stocks" Style="{StaticResource SectionTitle}"/>
                            </Grid>
                            <TextBlock Style="{StaticResource SectionDescription}"
                                       Text="Nettoyez automatiquement votre inventaire en supprimant les articles épuisés"/>
                            <CheckBox x:Name="ChkSupprimerArticlesQuantiteZero" 
                                      Style="{StaticResource ModernCheckBox}"
                                      Content="Supprimer automatiquement les articles avec une quantité de zéro"/>
                        </StackPanel>
                    </Border>

                    <!-- Langue -->
                    <Border Style="{StaticResource ModernCard}" Opacity="0.6">
                        <StackPanel>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="&#xE774;" Style="{StaticResource IconText}" Foreground="#94A3B8"/>
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <TextBlock Text="Langue de l'Interface" Style="{StaticResource SectionTitle}"/>
                                    <Border Background="#FEF3C7" 
                                            CornerRadius="6" 
                                            Padding="8,4"
                                            Margin="12,0,0,0"
                                            VerticalAlignment="Center">
                                        <TextBlock Text="BIENTÔT" 
                                                   FontSize="11" 
                                                   FontWeight="Bold"
                                                   Foreground="#92400E"/>
                                    </Border>
                                </StackPanel>
                            </Grid>
                            <TextBlock Style="{StaticResource SectionDescription}"
                                       Text="Changez la langue de l'application (Fonctionnalité en développement)"/>
                            <ComboBox x:Name="CbLangue" 
                                      Style="{StaticResource ModernComboBox}"
                                      Width="320" 
                                      HorizontalAlignment="Left"
                                      IsEnabled="False">
                                <ComboBoxItem Content="🇫🇷  Français"/>
                            </ComboBox>
                        </StackPanel>
                    </Border>

                    <!-- Options d'impression -->
                    <Border Style="{StaticResource ModernCard}">
                        <StackPanel>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="&#xE749;" Style="{StaticResource IconText}" Foreground="#3B82F6"/>
                                <TextBlock Grid.Column="1" Text="Options d'Impression - Vente" Style="{StaticResource SectionTitle}"/>
                            </Grid>
                            <TextBlock Style="{StaticResource SectionDescription}"
                                       Text="Configurez les options d'impression automatique pour gagner du temps lors des ventes"/>
                            <CheckBox x:Name="ChkImprimerFactureParDefaut" 
                                      Style="{StaticResource ModernCheckBox}"
                                      Content="✓  Cocher 'Imprimer Facture' par défaut"
                                      Margin="0,0,0,12"/>
                            <CheckBox x:Name="ChkImprimerTicketParDefaut" 
                                      Style="{StaticResource ModernCheckBox}"
                                      Content="✓  Cocher 'Imprimer Ticket' par défaut"/>
                        </StackPanel>
                    </Border>

                    <!-- Méthode de paiement -->
                    <Border Style="{StaticResource ModernCard}">
                        <StackPanel>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="&#xE8C7;" Style="{StaticResource IconText}" Foreground="#10B981"/>
                                <TextBlock Grid.Column="1" Text="Méthode de Paiement par Défaut" Style="{StaticResource SectionTitle}"/>
                            </Grid>
                            <TextBlock Style="{StaticResource SectionDescription}"
                                       Text="Sélectionnez la méthode de paiement qui sera présélectionnée lors de chaque nouvelle vente"/>
                            <ComboBox x:Name="CbMethodePaiementParDefaut" 
                                      Style="{StaticResource ModernComboBox}"
                                      Width="320" 
                                      HorizontalAlignment="Left">
                                <!-- Les items seront chargés dynamiquement depuis la BD -->
                            </ComboBox>
                        </StackPanel>
                    </Border>

                    <!-- Vue par défaut -->
                    <Border Style="{StaticResource ModernCard}">
                        <StackPanel>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="&#xE8A9;" Style="{StaticResource IconText}" Foreground="#EC4899"/>
                                <TextBlock Grid.Column="1" Text="Vue d'Affichage par Défaut" Style="{StaticResource SectionTitle}"/>
                            </Grid>
                            <TextBlock Style="{StaticResource SectionDescription}"
                                       Text="Choisissez le mode d'affichage préféré pour la liste des articles"/>
                            <ComboBox x:Name="CbVueParDefaut" 
                                      Style="{StaticResource ModernComboBox}"
                                      Width="320" 
                                      HorizontalAlignment="Left"
                                      SelectedIndex="1">
                                <ComboBoxItem Content="🎴  Affichage en Cartes"/>
                                <ComboBoxItem Content="📋  Affichage en Liste (Rows)" IsSelected="True"/>
                            </ComboBox>
                        </StackPanel>
                    </Border>

                    <!-- Tri par défaut -->
                    <Border Style="{StaticResource ModernCard}">
                        <StackPanel>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="&#xE8CB;" Style="{StaticResource IconText}" Foreground="#14B8A6"/>
                                <TextBlock Grid.Column="1" Text="Ordre de Tri par Défaut" Style="{StaticResource SectionTitle}"/>
                            </Grid>
                            <TextBlock Style="{StaticResource SectionDescription}"
                                       Text="Définissez l'ordre de tri automatique pour l'affichage des articles"/>
                            <ComboBox x:Name="CbTrierParDefaut" 
                                      Style="{StaticResource ModernComboBox}"
                                      Width="380" 
                                      HorizontalAlignment="Left">
                                <ComboBoxItem Content="📝  Nom (A-Z)"/>
                                <ComboBoxItem Content="📝  Nom (Z-A)"/>
                                <ComboBoxItem Content="💰  Prix croissant"/>
                                <ComboBoxItem Content="💰  Prix décroissant"/>
                                <ComboBoxItem Content="📦  Quantité croissante"/>
                                <ComboBoxItem Content="📦  Quantité décroissante"/>
                                <ComboBoxItem Content="🆕  Plus récent au plus ancien"/>
                                <ComboBoxItem Content="⏰  Plus ancien au plus récent"/>
                            </ComboBox>
                        </StackPanel>
                    </Border>

                    <!-- Taille des icônes - Will be hidden when Row is selected -->
                    <Border x:Name="TailleIconesBorder" Style="{StaticResource ModernCard}">
                        <StackPanel>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="&#xE71E;" Style="{StaticResource IconText}" Foreground="#F59E0B"/>
                                <TextBlock Grid.Column="1" Text="Taille des Icônes" Style="{StaticResource SectionTitle}"/>
                            </Grid>
                            <TextBlock Style="{StaticResource SectionDescription}"
                                       Text="Choisissez la taille d'affichage des icônes d'articles dans les vues en cartes"/>
                            <ComboBox x:Name="CbTailleIcones" 
                                      Style="{StaticResource ModernComboBox}"
                                      Width="320" 
                                      HorizontalAlignment="Left">
                                <ComboBoxItem Content="📏  Grandes icônes"/>
                                <ComboBoxItem Content="📐  Moyennes icônes"/>
                                <ComboBoxItem Content="📌  Petites icônes"/>
                            </ComboBox>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Boutons d'action modernes -->
            <Border Grid.Row="2" 
                    Background="White" 
                    CornerRadius="12" 
                    Padding="24,20"
                    Margin="0,20,0,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.08" Color="#000000"/>
                </Border.Effect>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="BtnAnnuler" 
                            Content="Annuler" 
                            Style="{StaticResource SecondaryButton}"
                            Width="130"
                            Click="BtnAnnuler_Click"
                            Margin="0,0,12,0"/>
                    <Button x:Name="BtnEnregistrer" 
                            Content="💾  Enregistrer" 
                            Style="{StaticResource PrimaryButton}"
                            Width="160"
                            Click="BtnEnregistrer_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>