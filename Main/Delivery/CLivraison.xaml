<UserControl x:Class="GestionComerce.Main.Delivery.CLivraison"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F8FAFC">

    <UserControl.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="24,0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#0F172A" BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Status Badge Style -->
        <Style x:Key="StatusBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#0F172A" BlurRadius="16" ShadowDepth="4" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid Style -->
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowHeight" Value="56"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>

        <!-- DataGrid Column Header Style -->
        <Style x:Key="DataGridColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="Foreground" Value="#475569"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <!-- DataGrid Row Style -->
        <Style x:Key="DataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#F1F5F9"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8FAFC"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#EFF6FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Cell Style -->
        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Padding="{TemplateBinding Padding}" 
                                Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" 
                Padding="32,24"
                BorderThickness="0,0,0,1"
                BorderBrush="#E2E8F0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#FFFFFF" Offset="0"/>
                    <GradientStop Color="#F8FAFC" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title Section -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="48" Height="48" 
                            CornerRadius="12" 
                            Background="#3B82F6"
                            Margin="0,0,16,0">
                        <TextBlock Text="🚚" 
                                   FontSize="24"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Gestion des Livraisons" 
                                   FontFamily="Segoe UI"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="#1E293B"/>
                        <TextBlock Text="Suivez et gérez vos livraisons en temps réel" 
                                   FontFamily="Segoe UI"
                                   FontSize="14"
                                   Foreground="#64748B"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="➕ Nouvelle Livraison" 
                            Name="BtnNouvelleLivraison"
                            Click="BtnNouvelleLivraison_Click"
                            Style="{StaticResource ActionButtonStyle}"
                            Margin="0,0,12,0">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#3B82F6" Offset="0"/>
                                <GradientStop Color="#2563EB" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.Foreground>
                            <SolidColorBrush Color="White"/>
                        </Button.Foreground>
                    </Button>

                    <Button Content="👥 Gérer Livreurs" 
                            Name="BtnGererLivreurs"
                            Click="BtnGererLivreurs_Click"
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#10B981"
                            Foreground="White"
                            Margin="0,0,12,0"/>

                    <Button Content="🏠 Retour" 
                            Name="BtnRetour"
                            Click="BtnRetour_Click"
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#F1F5F9"
                            Foreground="#475569"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Statistics Cards -->
        <Grid Grid.Row="1" Margin="32,24,32,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Livraisons Card -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,12,0">
                <StackPanel>
                    <TextBlock Text="Total" 
                               FontFamily="Segoe UI"
                               FontSize="13"
                               Foreground="#64748B"
                               Margin="0,0,0,8"/>
                    <TextBlock x:Name="TxtTotalLivraisons"
                               Text="0" 
                               FontFamily="Segoe UI"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="#1E293B"/>
                    <TextBlock Text="Livraisons" 
                               FontFamily="Segoe UI"
                               FontSize="12"
                               Foreground="#94A3B8"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- En Attente Card -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="0,0,12,0">
                <StackPanel>
                    <TextBlock Text="En Attente" 
                               FontFamily="Segoe UI"
                               FontSize="13"
                               Foreground="#F59E0B"
                               Margin="0,0,0,8"/>
                    <TextBlock x:Name="TxtEnAttente"
                               Text="0" 
                               FontFamily="Segoe UI"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="#F59E0B"/>
                    <TextBlock Text="À traiter" 
                               FontFamily="Segoe UI"
                               FontSize="12"
                               Foreground="#94A3B8"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- En Cours Card -->
            <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="0,0,12,0">
                <StackPanel>
                    <TextBlock Text="En Cours" 
                               FontFamily="Segoe UI"
                               FontSize="13"
                               Foreground="#3B82F6"
                               Margin="0,0,0,8"/>
                    <TextBlock x:Name="TxtEnCours"
                               Text="0" 
                               FontFamily="Segoe UI"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="#3B82F6"/>
                    <TextBlock Text="En route" 
                               FontFamily="Segoe UI"
                               FontSize="12"
                               Foreground="#94A3B8"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- Livrées Card -->
            <Border Grid.Column="3" Style="{StaticResource CardStyle}" Margin="0,0,12,0">
                <StackPanel>
                    <TextBlock Text="Livrées" 
                               FontFamily="Segoe UI"
                               FontSize="13"
                               Foreground="#10B981"
                               Margin="0,0,0,8"/>
                    <TextBlock x:Name="TxtLivrees"
                               Text="0" 
                               FontFamily="Segoe UI"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="#10B981"/>
                    <TextBlock Text="Complétées" 
                               FontFamily="Segoe UI"
                               FontSize="12"
                               Foreground="#94A3B8"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- Revenue Card -->
            <Border Grid.Column="4" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Frais Total" 
                               FontFamily="Segoe UI"
                               FontSize="13"
                               Foreground="#8B5CF6"
                               Margin="0,0,0,8"/>
                    <TextBlock x:Name="TxtFraisTotal"
                               Text="0 DH" 
                               FontFamily="Segoe UI"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#8B5CF6"/>
                    <TextBlock Text="Livraison" 
                               FontFamily="Segoe UI"
                               FontSize="12"
                               Foreground="#94A3B8"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Main Content Area -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="32,24,32,32">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Filter Section -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               Text="🔍 Filtrer par statut:" 
                               FontFamily="Segoe UI"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#475569"
                               VerticalAlignment="Center"
                               Margin="0,0,16,0"/>

                    <ComboBox Grid.Column="1"
                              Name="CmbStatutFilter"
                              SelectionChanged="CmbStatutFilter_SelectionChanged"
                              Height="44"
                              FontFamily="Segoe UI"
                              FontSize="14"
                              Padding="16,0"
                              Background="White"
                              BorderBrush="#E2E8F0"
                              BorderThickness="1"
                              MaxWidth="300"
                              HorizontalAlignment="Left">
                        <ComboBoxItem Content="Tous les statuts" IsSelected="True"/>
                        <ComboBoxItem Content="En attente"/>
                        <ComboBoxItem Content="Confirmée"/>
                        <ComboBoxItem Content="En préparation"/>
                        <ComboBoxItem Content="En cours"/>
                        <ComboBoxItem Content="Livrée"/>
                        <ComboBoxItem Content="Annulée"/>
                    </ComboBox>

                    <Button Grid.Column="2"
                            Content="🔄 Actualiser"
                            Name="BtnRefresh"
                            Click="BtnRefresh_Click"
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#F1F5F9"
                            Foreground="#475569"/>
                </Grid>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1"
                          Name="DgLivraisons"
                          Style="{StaticResource ModernDataGridStyle}"
                          ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                          RowStyle="{StaticResource DataGridRowStyle}"
                          CellStyle="{StaticResource DataGridCellStyle}"
                          MouseDoubleClick="DgLivraisons_MouseDoubleClick">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding LivraisonID}" Width="60"/>
                        <DataGridTextColumn Header="Client" Binding="{Binding ClientNom}" Width="150"/>
                        <DataGridTextColumn Header="Téléphone" Binding="{Binding ClientTelephone}" Width="120"/>
                        <DataGridTextColumn Header="Adresse" Binding="{Binding AdresseLivraison}" Width="*"/>
                        <DataGridTextColumn Header="Ville" Binding="{Binding Ville}" Width="100"/>
                        <DataGridTextColumn Header="Livreur" Binding="{Binding LivreurNom}" Width="130"/>
                        <DataGridTextColumn Header="Date Prévue" Binding="{Binding DateLivraisonPrevue, StringFormat='dd/MM/yyyy HH:mm'}" Width="150"/>

                        <DataGridTemplateColumn Header="Statut" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border x:Name="StatusBorder" Style="{StaticResource StatusBadgeStyle}">
                                        <TextBlock x:Name="StatusText" 
                                                   Text="{Binding Statut}"
                                                   FontFamily="Segoe UI"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"/>
                                    </Border>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding Statut}" Value="en_attente">
                                            <Setter TargetName="StatusBorder" Property="Background" Value="#FEF3C7"/>
                                            <Setter TargetName="StatusText" Property="Foreground" Value="#92400E"/>
                                            <Setter TargetName="StatusText" Property="Text" Value="En Attente"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Statut}" Value="confirmee">
                                            <Setter TargetName="StatusBorder" Property="Background" Value="#DBEAFE"/>
                                            <Setter TargetName="StatusText" Property="Foreground" Value="#1E40AF"/>
                                            <Setter TargetName="StatusText" Property="Text" Value="Confirmée"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Statut}" Value="en_preparation">
                                            <Setter TargetName="StatusBorder" Property="Background" Value="#E0E7FF"/>
                                            <Setter TargetName="StatusText" Property="Foreground" Value="#4338CA"/>
                                            <Setter TargetName="StatusText" Property="Text" Value="En Prép."/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Statut}" Value="en_cours">
                                            <Setter TargetName="StatusBorder" Property="Background" Value="#DBEAFE"/>
                                            <Setter TargetName="StatusText" Property="Foreground" Value="#1D4ED8"/>
                                            <Setter TargetName="StatusText" Property="Text" Value="En Cours"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Statut}" Value="livree">
                                            <Setter TargetName="StatusBorder" Property="Background" Value="#D1FAE5"/>
                                            <Setter TargetName="StatusText" Property="Foreground" Value="#065F46"/>
                                            <Setter TargetName="StatusText" Property="Text" Value="Livrée"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Statut}" Value="annulee">
                                            <Setter TargetName="StatusBorder" Property="Background" Value="#FEE2E2"/>
                                            <Setter TargetName="StatusText" Property="Foreground" Value="#991B1B"/>
                                            <Setter TargetName="StatusText" Property="Text" Value="Annulée"/>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Total" Binding="{Binding TotalCommande, StringFormat='{}{0:N2} DH'}" Width="110"/>
                        <DataGridTextColumn Header="Frais" Binding="{Binding FraisLivraison, StringFormat='{}{0:N2} DH'}" Width="90"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>