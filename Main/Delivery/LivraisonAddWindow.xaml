<Window x:Class="GestionComerce.Main.Delivery.LivraisonAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nouvelle Livraison"
        Height="820"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F8FAFC">

    <Window.Resources>
        <!-- Modern Input Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="ModernDatePickerStyle" TargetType="DatePicker">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#475569"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="48"/>
            <Setter Property="Padding" Value="32,0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#3B82F6"
                    Padding="32,24">
                <StackPanel>
                    <TextBlock Text="📦 Nouvelle Livraison" 
                               FontFamily="Segoe UI"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <TextBlock Text="Remplissez les informations de livraison et sélectionnez les opérations" 
                               FontFamily="Segoe UI"
                               FontSize="14"
                               Foreground="#DBEAFE"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          Padding="32,24">
                <StackPanel>
                    <!-- Section: Sélection des Opérations -->
                    <TextBlock Text="🛒 Sélection des Opérations" 
                               FontFamily="Segoe UI"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#1E293B"
                               Margin="0,0,0,16"/>

                    <Border Background="#EFF6FF" 
                            BorderBrush="#3B82F6"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="16"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
               Text="💡 Sélectionnez une ou plusieurs opérations à inclure dans cette livraison" 
               FontFamily="Segoe UI"
               FontSize="13"
               Foreground="#1E40AF"
               VerticalAlignment="Center"/>

                                <Button Grid.Column="1"
            Name="BtnRefreshOperations"
            Click="BtnRefreshOperations_Click"
            Height="32"
            Padding="16,0"
            FontFamily="Segoe UI"
            FontSize="12"
            FontWeight="SemiBold"
            Background="#3B82F6"
            Foreground="White"
            BorderThickness="0"
            Cursor="Hand"
            Content="🔄 Actualiser">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                    CornerRadius="8"
                                    Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>

                            <!-- REPLACE YOUR DATAGRID IN LivraisonAddWindow.xaml WITH THIS -->

                            <DataGrid x:Name="DgOperations"
          Background="White"
          BorderThickness="1"
          BorderBrush="#E2E8F0"
          RowHeight="48"
          GridLinesVisibility="None"
          HeadersVisibility="Column"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          CanUserDeleteRows="False"
          CanUserReorderColumns="False"
          CanUserResizeColumns="False"
          CanUserResizeRows="False"
          CanUserSortColumns="False"
          IsReadOnly="True"
          SelectionMode="Single"
          Height="200"
          FontFamily="Segoe UI">

                                <!-- DataGrid Header Style -->
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="#F1F5F9"/>
                                        <Setter Property="Foreground" Value="#475569"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="FontSize" Value="12"/>
                                        <Setter Property="Padding" Value="12,10"/>
                                        <Setter Property="Height" Value="44"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="BorderBrush" Value="#E2E8F0"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>

                                <!-- DataGrid Row Style -->
                                <DataGrid.RowStyle>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="BorderBrush" Value="#F1F5F9"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F8FAFC"/>
                                            </Trigger>
                                            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource Self}}" Value="True">
                                                <Setter Property="Background" Value="#EFF6FF"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.RowStyle>

                                <!-- DataGrid Cell Style -->
                                <DataGrid.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Padding" Value="12,0"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="DataGridCell">
                                                    <Border Padding="{TemplateBinding Padding}" 
                                Background="{TemplateBinding Background}">
                                                        <ContentPresenter VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="Foreground" Value="#1E293B"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.CellStyle>

                                <DataGrid.Columns>
                                    <!-- Checkbox Column -->
                                    <DataGridTemplateColumn Width="50">
                                        <DataGridTemplateColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <CheckBox x:Name="ChkSelectAll"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              ToolTip="Tout sélectionner"
                              Click="ChkSelectAll_Click"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.HeaderTemplate>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox x:Name="ChkSelect"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Click="ChkSelect_Click"
                              IsHitTestVisible="True"
                              Focusable="False"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- ID Column -->
                                    <DataGridTextColumn Header="ID" 
                            Binding="{Binding OperationID}" 
                            Width="70">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                <Setter Property="Foreground" Value="#3B82F6"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!-- Date Column -->
                                    <DataGridTextColumn Header="Date" 
                            Binding="{Binding DateOperation, StringFormat='dd/MM/yyyy'}" 
                            Width="120">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#64748B"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!-- Prix Column -->
                                    <DataGridTextColumn Header="Prix" 
                            Binding="{Binding PrixOperation, StringFormat='{}{0:N2} DH'}" 
                            Width="110">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#1E293B"/>
                                                <Setter Property="FontWeight" Value="Medium"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!-- Remise Column -->
                                    <DataGridTextColumn Header="Remise" 
                            Binding="{Binding Remise, StringFormat='{}{0:N2} DH'}" 
                            Width="100">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#EF4444"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!-- Total Column -->
                                    <DataGridTextColumn Header="Total" 
                            Binding="{Binding PrixOperation, StringFormat='{}{0:N2} DH'}" 
                            Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#10B981"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                <Setter Property="FontSize" Value="14"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                <TextBlock Text="Opérations sélectionnées: " 
                                           FontFamily="Segoe UI"
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           Foreground="#1E40AF"/>
                                <TextBlock x:Name="TxtSelectedCount"
                                           Text="0" 
                                           FontFamily="Segoe UI"
                                           FontSize="13"
                                           FontWeight="Bold"
                                           Foreground="#3B82F6"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Section: Information Client -->
                    <TextBlock Text="👤 Information Client" 
                               FontFamily="Segoe UI"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#1E293B"
                               Margin="0,8,0,16"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Nom du Client *" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="TxtClientNom" 
                                     Style="{StaticResource ModernTextBoxStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Téléphone *" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="TxtClientTelephone" 
                                     Style="{StaticResource ModernTextBoxStyle}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Section: Adresse de Livraison -->
                    <TextBlock Text="📍 Adresse de Livraison" 
                               FontFamily="Segoe UI"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#1E293B"
                               Margin="0,24,0,16"/>

                    <TextBlock Text="Adresse Complète *" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="TxtAdresse" 
                             Style="{StaticResource ModernTextBoxStyle}"
                             Height="66"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalContentAlignment="Top"
                             Padding="16,12"
                             Margin="0,0,0,16"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Ville" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="TxtVille" 
                                     Style="{StaticResource ModernTextBoxStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Code Postal" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="TxtCodePostal" 
                                     Style="{StaticResource ModernTextBoxStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="4">
                            <TextBlock Text="Zone de Livraison" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="CmbZoneLivraison"
                                      Style="{StaticResource ModernComboBoxStyle}"
                                      SelectionChanged="CmbZoneLivraison_SelectionChanged">
                                <ComboBoxItem Content="Centre Ville" Tag="30"/>
                                <ComboBoxItem Content="Périphérie" Tag="50"/>
                                <ComboBoxItem Content="Banlieue" Tag="70"/>
                                <ComboBoxItem Content="Hors Zone" Tag="100"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <!-- Section: Détails de Livraison -->
                    <TextBlock Text="📅 Détails de Livraison" 
                               FontFamily="Segoe UI"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#1E293B"
                               Margin="0,24,0,16"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Date de Livraison Prévue *" Style="{StaticResource LabelStyle}"/>
                            <DatePicker x:Name="DateLivraisonPrevue" 
                                        Style="{StaticResource ModernDatePickerStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Heure de Livraison" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="CmbHeureLivraison"
                                      Style="{StaticResource ModernComboBoxStyle}">
                                <ComboBoxItem Content="08:00 - 10:00"/>
                                <ComboBoxItem Content="10:00 - 12:00" IsSelected="True"/>
                                <ComboBoxItem Content="12:00 - 14:00"/>
                                <ComboBoxItem Content="14:00 - 16:00"/>
                                <ComboBoxItem Content="16:00 - 18:00"/>
                                <ComboBoxItem Content="18:00 - 20:00"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,16,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Livreur Assigné" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="CmbLivreur"
                                      Style="{StaticResource ModernComboBoxStyle}"
                                      DisplayMemberPath="NomComplet"
                                      SelectedValuePath="LivreurID"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Statut Initial" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="CmbStatut"
                                      Style="{StaticResource ModernComboBoxStyle}">
                                <ComboBoxItem Content="En attente" Tag="en_attente" IsSelected="True"/>
                                <ComboBoxItem Content="Confirmée" Tag="confirmee"/>
                                <ComboBoxItem Content="En préparation" Tag="en_preparation"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <!-- Section: Détails Financiers -->
                    <TextBlock Text="💰 Détails Financiers" 
                               FontFamily="Segoe UI"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#1E293B"
                               Margin="0,24,0,16"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Total Commande (DH)" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="TxtTotalCommande" 
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     IsReadOnly="True"
                                     Background="#F8FAFC"
                                     Text="0.00"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Frais de Livraison (DH)" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="TxtFraisLivraison" 
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     Text="0"
                                     IsReadOnly="True"
                                     Background="#F8FAFC"/>
                        </StackPanel>

                        <StackPanel Grid.Column="4">
                            <TextBlock Text="Mode de Paiement" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="CmbModePaiement"
              Style="{StaticResource ModernComboBoxStyle}">
                                <!-- Items will be loaded from database -->
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <!-- Notes -->
                    <TextBlock Text="Notes / Instructions" 
                               Style="{StaticResource LabelStyle}"
                               Margin="0,16,0,8"/>
                    <TextBox x:Name="TxtNotes" 
                             Style="{StaticResource ModernTextBoxStyle}"
                             Height="80"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalContentAlignment="Top"
                             Padding="16,12"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer Actions -->
            <Border Grid.Row="2" 
                    Background="#F8FAFC"
                    BorderBrush="#E2E8F0"
                    BorderThickness="0,1,0,0"
                    Padding="32,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Border Background="#FEF3C7" 
                                CornerRadius="8"
                                Padding="12,8">
                            <TextBlock Text="💡 Sélectionnez au moins une opération" 
                                       FontFamily="Segoe UI"
                                       FontSize="12"
                                       Foreground="#92400E"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="❌ Annuler" 
                                Name="BtnAnnuler"
                                Click="BtnAnnuler_Click"
                                Style="{StaticResource ButtonStyle}"
                                Background="#F1F5F9"
                                Foreground="#475569"
                                Margin="0,0,12,0"/>

                        <Button Content="✅ Créer la Livraison" 
                                Name="BtnCreer"
                                Click="BtnCreer_Click"
                                Style="{StaticResource ButtonStyle}"
                                Background="#3B82F6"
                                Foreground="White"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>