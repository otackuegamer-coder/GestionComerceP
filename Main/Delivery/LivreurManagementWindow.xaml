<Window x:Class="GestionComerce.Main.Delivery.LivreurManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion des Livreurs"
        Height="750"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F8FAFC">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#0F172A" BlurRadius="16" ShadowDepth="4" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Input Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#475569"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- DataGrid Styles -->
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowHeight" Value="56"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>

        <Style x:Key="DataGridColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="Foreground" Value="#475569"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Height" Value="48"/>
        </Style>

        <Style x:Key="DataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#F1F5F9"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F8FAFC"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#EFF6FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Padding="{TemplateBinding Padding}" 
                                Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="16"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Liste des Livreurs -->
        <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="24">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="👥 Liste des Livreurs" 
                                   FontFamily="Segoe UI"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="#1E293B"/>
                        <TextBlock Text="Gérez votre équipe de livraison" 
                                   FontFamily="Segoe UI"
                                   FontSize="14"
                                   Foreground="#64748B"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <Button Grid.Column="1"
                            Content="🔄"
                            Name="BtnRefresh"
                            Click="BtnRefresh_Click"
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#F1F5F9"
                            Foreground="#475569"
                            Width="44"
                            Padding="0"
                            ToolTip="Actualiser"/>
                </Grid>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1"
                          Name="DgLivreurs"
                          Style="{StaticResource ModernDataGridStyle}"
                          ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                          RowStyle="{StaticResource DataGridRowStyle}"
                          CellStyle="{StaticResource DataGridCellStyle}"
                          SelectionChanged="DgLivreurs_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding LivreurID}" Width="60"/>
                        <DataGridTextColumn Header="Nom" Binding="{Binding Nom}" Width="120"/>
                        <DataGridTextColumn Header="Prénom" Binding="{Binding Prenom}" Width="120"/>
                        <DataGridTextColumn Header="Téléphone" Binding="{Binding Telephone}" Width="120"/>
                        <DataGridTextColumn Header="Véhicule" Binding="{Binding VehiculeType}" Width="110"/>

                        <DataGridTemplateColumn Header="Statut" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border x:Name="StatusBorder" 
                                            CornerRadius="8"
                                            Padding="10,6"
                                            HorizontalAlignment="Center">
                                        <TextBlock x:Name="StatusText" 
                                                   Text="{Binding Statut}"
                                                   FontFamily="Segoe UI"
                                                   FontSize="12"
                                                   FontWeight="SemiBold"/>
                                    </Border>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding Statut}" Value="disponible">
                                            <Setter TargetName="StatusBorder" Property="Background" Value="#D1FAE5"/>
                                            <Setter TargetName="StatusText" Property="Foreground" Value="#065F46"/>
                                            <Setter TargetName="StatusText" Property="Text" Value="Disponible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Statut}" Value="occupe">
                                            <Setter TargetName="StatusBorder" Property="Background" Value="#DBEAFE"/>
                                            <Setter TargetName="StatusText" Property="Foreground" Value="#1E40AF"/>
                                            <Setter TargetName="StatusText" Property="Text" Value="Occupé"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Statut}" Value="indisponible">
                                            <Setter TargetName="StatusBorder" Property="Background" Value="#FEE2E2"/>
                                            <Setter TargetName="StatusText" Property="Foreground" Value="#991B1B"/>
                                            <Setter TargetName="StatusText" Property="Text" Value="Indisponible"/>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Actions -->
                <StackPanel Grid.Row="2" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            Margin="0,16,0,0">
                    <Button Content="🗑️ Supprimer" 
                            Name="BtnSupprimer"
                            Click="BtnSupprimer_Click"
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#FEE2E2"
                            Foreground="#991B1B"
                            IsEnabled="False"
                            Margin="0,0,12,0"/>

                    <Button Content="✏️ Modifier" 
                            Name="BtnModifier"
                            Click="BtnModifier_Click"
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#DBEAFE"
                            Foreground="#1E40AF"
                            IsEnabled="False"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Formulaire Ajout/Modification -->
        <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="0,24,24,24">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock x:Name="TxtFormTitle"
                               Text="➕ Nouveau Livreur" 
                               FontFamily="Segoe UI"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#1E293B"
                               Margin="0,0,0,24"/>

                    <!-- Nom -->
                    <TextBlock Text="Nom *" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="TxtNom" 
                             Style="{StaticResource ModernTextBoxStyle}"
                             Margin="0,0,0,16"/>

                    <!-- Prénom -->
                    <TextBlock Text="Prénom *" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="TxtPrenom" 
                             Style="{StaticResource ModernTextBoxStyle}"
                             Margin="0,0,0,16"/>

                    <!-- Téléphone -->
                    <TextBlock Text="Téléphone *" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="TxtTelephone" 
                             Style="{StaticResource ModernTextBoxStyle}"
                             Margin="0,0,0,16"/>

                    <!-- Email -->
                    <TextBlock Text="Email" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="TxtEmail" 
                             Style="{StaticResource ModernTextBoxStyle}"
                             Margin="0,0,0,16"/>

                    <!-- Type de Véhicule -->
                    <TextBlock Text="Type de Véhicule" Style="{StaticResource LabelStyle}"/>
                    <ComboBox x:Name="CmbVehiculeType"
                              Style="{StaticResource ModernComboBoxStyle}"
                              Margin="0,0,0,16">
                        <ComboBoxItem Content="Moto"/>
                        <ComboBoxItem Content="Voiture"/>
                        <ComboBoxItem Content="Camionnette"/>
                        <ComboBoxItem Content="Vélo"/>
                    </ComboBox>

                    <!-- Immatriculation -->
                    <TextBlock Text="Immatriculation" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="TxtImmatriculation" 
                             Style="{StaticResource ModernTextBoxStyle}"
                             Margin="0,0,0,16"/>

                    <!-- Statut -->
                    <TextBlock Text="Statut" Style="{StaticResource LabelStyle}"/>
                    <ComboBox x:Name="CmbStatut"
                              Style="{StaticResource ModernComboBoxStyle}"
                              Margin="0,0,0,16">
                        <ComboBoxItem Content="Disponible" Tag="disponible" IsSelected="True"/>
                        <ComboBoxItem Content="Occupé" Tag="occupe"/>
                        <ComboBoxItem Content="Indisponible" Tag="indisponible"/>
                    </ComboBox>

                    <!-- Zone de Couverture -->
                    <TextBlock Text="Zone de Couverture" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="TxtZoneCouverture" 
                             Style="{StaticResource ModernTextBoxStyle}"
                             Height="66"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalContentAlignment="Top"
                             Padding="16,12"
                             Margin="0,0,0,24"/>

                    <!-- Boutons -->
                    <Button Content="💾 Enregistrer" 
                            Name="BtnEnregistrer"
                            Click="BtnEnregistrer_Click"
                            Style="{StaticResource ActionButtonStyle}"
                            Foreground="White"
                            Margin="0,0,0,12">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#10B981" Offset="0"/>
                                <GradientStop Color="#059669" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>

                    <Button Content="🔄 Nouveau" 
                            Name="BtnNouveau"
                            Click="BtnNouveau_Click"
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#F1F5F9"
                            Foreground="#475569"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>