<Window x:Class="GestionComerce.Main.ProjectManagment.WArticlesReverse"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Annulation d'Articles" Height="470" Width="500" 
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        ShowInTaskbar="True"
        WindowStyle="None" 
        ResizeMode="NoResize"
        AllowsTransparency="True">

    <Window.Resources>
        <!-- Main Action Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2563EB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1D4ED8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Close Button Style -->
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#6B7280"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4B5563"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#374151"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Container with Border and Shadow -->
    <Border Background="White" 
            CornerRadius="12" 
            BorderThickness="1"
            BorderBrush="#D1D5DB"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="#000000" 
                            Direction="270"
                            ShadowDepth="0" 
                            BlurRadius="30" 
                            Opacity="0.12"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Content -->
                <RowDefinition Height="Auto"/>
                <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#F8FAFC" 
                    BorderBrush="#E5E7EB" 
                    BorderThickness="0,0,0,1" 
                    Padding="24,20"
                    CornerRadius="12,12,0,0">
                <StackPanel>
                    <TextBlock Text="Annulation d'Articles" 
                              FontSize="20" 
                              FontWeight="Bold" 
                              Foreground="#1F2937" 
                              Margin="0,0,0,6"/>
                    <TextBlock Text="Sélectionnez les articles à annuler de cette opération" 
                              FontSize="13" 
                              Foreground="#6B7280"
                              TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Articles List -->
            <ScrollViewer Grid.Row="1" 
                         VerticalScrollBarVisibility="Auto" 
                         Padding="24"
                         Background="White">
                <StackPanel x:Name="ArticlesContainer">
                    <!-- Articles will be added here dynamically -->
                </StackPanel>
            </ScrollViewer>

            <!-- Footer Buttons -->
            <Border Grid.Row="2" 
                    Background="#F9FAFB" 
                    BorderBrush="#E5E7EB" 
                    BorderThickness="0,1,0,0" 
                    Padding="24,16"
                    CornerRadius="0,0,12,12">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Confirmer" 
                           Style="{StaticResource ActionButtonStyle}" 
                           Click="ConfirmerButton_Click" 
                           Margin="0,0,12,0"/>
                    <Button Content="Fermer" 
                           Style="{StaticResource CloseButtonStyle}" 
                           Click="FermerButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>