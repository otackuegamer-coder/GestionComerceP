<Window x:Class="GestionComerce.Main.Inventory.WDevisPreview"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aperçu du Devis" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#2C3E50">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="SuccessGreen" Color="#10B981"/>

        <Style x:Key="ToolbarButton" TargetType="Button">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4A5F7F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" 
                Background="#34495E" 
                Padding="24,16"
                BorderThickness="0,0,0,2"
                BorderBrush="#2C3E50">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Path Data="M9 12H15M12 9V15M21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12Z"
                          Stroke="White"
                          StrokeThickness="2"
                          Width="24" Height="24"
                          Margin="0,0,16,0" Stretch="Fill"/>
                    <TextBlock Text="Aperçu du Devis" 
                               FontSize="20" 
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="ArticleCountText"
                               Text="(0 articles)"
                               FontSize="16"
                               Foreground="#BDC3C7"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="🖨️ Imprimer"
                            Style="{StaticResource ToolbarButton}"
                            Click="Print_Click">
                        <Button.Background>
                            <SolidColorBrush Color="#10B981"/>
                        </Button.Background>
                    </Button>
                    <Button Content="💾 Enregistrer PDF"
                            Style="{StaticResource ToolbarButton}"
                            Click="SavePDF_Click">
                        <Button.Background>
                            <SolidColorBrush Color="#3B82F6"/>
                        </Button.Background>
                    </Button>
                    <Button Content="✕ Fermer"
                            Style="{StaticResource ToolbarButton}"
                            Click="Close_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Preview Area -->
        <ScrollViewer Grid.Row="1" 
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      Background="#2C3E50"
                      Padding="40">
            <Border x:Name="PrintArea"
                    Background="White"
                    CornerRadius="8"
                    
                  >
                <Border.Resources>
                    <DropShadowEffect x:Key="ShadowLg" BlurRadius="40" ShadowDepth="0" Color="#000000" Opacity="0.2"/>
                </Border.Resources>

                <!-- Content will be generated dynamically in code-behind -->
                <StackPanel x:Name="DevisContent" />
            </Border>
        </ScrollViewer>
    </Grid>
</Window>