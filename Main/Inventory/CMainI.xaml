                                       Style="{StaticResource SectionTitleStyle}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="5" Text="Prix de Vente"
                                       Style="{StaticResource SectionTitleStyle}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="6" Text="Stock"
                                       Style="{StaticResource SectionTitleStyle}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="7" Text="Expiration"
                                       Style="{StaticResource SectionTitleStyle}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="8" Text="Actions"
                                       Style="{StaticResource SectionTitleStyle}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Table Content -->
                    <StackPanel Grid.Row="1" Margin="8">
                        <StackPanel x:Name="ArticlesContainer" />

                        <!-- View More Button -->
                        <Button x:Name="ViewMoreButton"
                                Height="44"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Click="ViewMoreButton_Click"
                                Margin="8,12,8,8"
