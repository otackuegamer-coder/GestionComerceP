                                <Path Data="M19 9L12 16L5 9"
                                      Stroke="{StaticResource TextSecondary}"
                                      StrokeThickness="2"
                                      Width="18" Height="18"
                                      Margin="0,0,10,0" Stretch="Fill"/>
                                <TextBlock Text="Voir Plus d'Articles" 
                                           FontWeight="Medium" 
                                           FontSize="14"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </ScrollViewer>

