<UserControl x:Class="GestionComerce.Main.ClientPage.CMainC"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GestionComerce"
        Background="#F5F7FA">

    <UserControl.Resources>
        <!-- Modern Button Styles -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="EditButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="60"/>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#EF4444"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="60"/>
        </Style>

        <Style x:Key="PaidButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="60"/>
        </Style>

        <Style x:Key="OperationButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#F59E0B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="80"/>
        </Style>

        <!-- Header Style -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#64748B"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <!-- Data Style -->
        <Style x:Key="DataTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#0F172A"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <!-- Modern Card Style -->
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="24,20"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#0F172A" Direction="270" ShadowDepth="1" BlurRadius="8" Opacity="0.04"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Icon Container Style -->
        <Style x:Key="IconContainerStyle" TargetType="Border">
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Modern Header -->
        <Border Grid.Row="0" Background="White" Padding="32,24" 
                BorderBrush="#E2E8F0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Back Button & Title Section -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="←" FontSize="20" 
                            Background="#F8FAFC" BorderBrush="#E2E8F0" BorderThickness="1"
                            Foreground="#475569" Width="40" Height="40"
                            Cursor="Hand" Click="BackButton_Click" Margin="0,0,20,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F1F5F9"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Gestion des Clients" 
                                  FontSize="24" FontWeight="SemiBold" Foreground="#0F172A"
                                  Margin="0,0,0,4"/>
                        <TextBlock Text="Gérez et suivez toutes vos relations clients" 
                                  FontSize="14" Foreground="#64748B"/>
                    </StackPanel>
                </StackPanel>

                <!-- Search and Actions -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Modern Search Box -->
                    <Border Background="#F8FAFC" CornerRadius="8" Height="40" Width="280" 
                            Margin="0,0,12,0" BorderBrush="#E2E8F0" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="🔍" FontSize="16" Foreground="#94A3B8" 
                                      Margin="12,0,8,0" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" Name="SearchTextBox" 
                                    Background="Transparent" BorderThickness="0"
                                    Padding="0,0,12,0" FontSize="14" VerticalAlignment="Center"
                                    Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                    Foreground="#475569" TextChanged="SearchTextBox_TextChanged">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="0"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </Grid>
                    </Border>

                    <!-- Add New Client Button -->
                    <Button Name="AddBtn" Height="40" Padding="20,0" BorderThickness="0" Width="150"
                            Click="AddNewClient_Click" Cursor="Hand">
                        <Button.Background>
                            <SolidColorBrush Color="#3B82F6"/>
                        </Button.Background>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="+" FontSize="18" FontWeight="SemiBold" 
                                                  Foreground="White" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="Ajouter Client" FontSize="14" FontWeight="Medium" 
                                                  Foreground="White" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2563EB"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#E2E8F0"/>
                                        <Setter Property="Cursor" Value="No"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Statistics Cards -->
        <Grid Grid.Row="1" Margin="32,24,32,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Clients Card -->
            <Border Grid.Column="0" Style="{StaticResource StatCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Border Style="{StaticResource IconContainerStyle}">
                            <Border.Background>
                                <SolidColorBrush Color="#EEF2FF"/>
                            </Border.Background>
                            <TextBlock Text="👥" FontSize="24" HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                    </Grid>

                    <StackPanel Grid.Row="1" VerticalAlignment="Bottom">
                        <TextBlock x:Name="TotalClientText" Text="0" 
                                  FontSize="32" FontWeight="Bold" Foreground="#0F172A"
                                  Margin="0,0,0,4"/>
                        <TextBlock Text="Total Clients" 
                                  FontSize="14" FontWeight="Medium" Foreground="#64748B"/>
                        <TextBlock Text="Clients actifs" 
                                  FontSize="12" Foreground="#94A3B8" Margin="0,2,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Total Credit Card -->
            <Border Grid.Column="1" Style="{StaticResource StatCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Border Style="{StaticResource IconContainerStyle}">
                            <Border.Background>
                                <SolidColorBrush Color="#FEF3C7"/>
                            </Border.Background>
                            <TextBlock Text="💳" FontSize="24" HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                    </Grid>

                    <StackPanel Grid.Row="1" VerticalAlignment="Bottom">
                        <TextBlock x:Name="TotalCreditText" Text="0.00 DH" 
                                  FontSize="32" FontWeight="Bold" Foreground="#0F172A"
                                  Margin="0,0,0,4"/>
                        <TextBlock Text="Crédit Total" 
                                  FontSize="14" FontWeight="Medium" Foreground="#64748B"/>
                        <TextBlock Text="Solde impayé" 
                                  FontSize="12" Foreground="#94A3B8" Margin="0,2,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Paid This Month Card -->
            <Border Grid.Column="2" Style="{StaticResource StatCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Border Style="{StaticResource IconContainerStyle}">
                            <Border.Background>
                                <SolidColorBrush Color="#D1FAE5"/>
                            </Border.Background>
                            <TextBlock Text="✅" FontSize="24" HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                    </Grid>

                    <StackPanel Grid.Row="1" VerticalAlignment="Bottom">
                        <TextBlock x:Name="PaidThisMonthText" Text="0.00 DH" 
                                  FontSize="32" FontWeight="Bold" Foreground="#0F172A"
                                  Margin="0,0,0,4"/>
                        <TextBlock Text="Payé ce Mois" 
                                  FontSize="14" FontWeight="Medium" Foreground="#64748B"/>
                        <TextBlock Text="Total des paiements" 
                                  FontSize="12" Foreground="#94A3B8" Margin="0,2,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Pending Payments Card -->
            <Border Grid.Column="3" Style="{StaticResource StatCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Border Style="{StaticResource IconContainerStyle}">
                            <Border.Background>
                                <SolidColorBrush Color="#FECACA"/>
                            </Border.Background>
                            <TextBlock Text="⏳" FontSize="24" HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                        </Border>
                    </Grid>

                    <StackPanel Grid.Row="1" VerticalAlignment="Bottom">
                        <TextBlock x:Name="PendingText" Text="0.00 DH" 
                                  FontSize="32" FontWeight="Bold" Foreground="#0F172A"
                                  Margin="0,0,0,4"/>
                        <TextBlock Text="Crédit Restant" 
                                  FontSize="14" FontWeight="Medium" Foreground="#64748B"/>
                        <TextBlock Text="En attente de paiement" 
                                  FontSize="12" Foreground="#94A3B8" Margin="0,2,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Main Content Area -->
        <Border Grid.Row="2" Background="White" Margin="32,0,32,32" 
                CornerRadius="12" BorderBrush="#E2E8F0" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="#0F172A" Direction="270" ShadowDepth="1" BlurRadius="8" Opacity="0.04"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="56"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Table Header -->
                <Border Grid.Row="0" Background="#F8FAFC" CornerRadius="12,12,0,0" 
                        BorderBrush="#E2E8F0" BorderThickness="0,0,0,1">
                    <Grid Margin="24,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="170"/>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>


                        <TextBlock Grid.Column="1" Text="NOM DU CLIENT" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="2" Text="TÉLÉPHONE / ICE" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="3" Text="ADRESSE" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="4" Text="SOLDE" Style="{StaticResource HeaderTextStyle}"/>
                        <TextBlock Grid.Column="5" Text="ACTIONS" Style="{StaticResource HeaderTextStyle}" Margin="0,0,150,0"
                                 HorizontalAlignment="Right" />
                    </Grid>
                </Border>

                <!-- Table Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                             HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Name="ClientsContainer" Margin="0,8,0,8">
                        <!-- Populated programmatically -->
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Modern Modal Overlay -->
        <Grid Name="ModalOverlay" Grid.RowSpan="3" Background="#0F172A" Opacity="0.5" Visibility="Collapsed"/>
        <Grid Name="ModalContainer" Grid.RowSpan="3" Visibility="Collapsed">
            <Border Background="White" CornerRadius="16" MaxWidth="640" MaxHeight="560" 
                    HorizontalAlignment="Center" VerticalAlignment="Center" 
                    Padding="32" BorderBrush="#E2E8F0" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="#0F172A" Direction="270" ShadowDepth="8" BlurRadius="40" Opacity="0.15"/>
                </Border.Effect>
                <ContentPresenter Name="ModalContent"/>
            </Border>
        </Grid>
    </Grid>
</UserControl>