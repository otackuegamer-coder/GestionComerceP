<UserControl x:Class="GestionComerce.Main.Vente.CMainV"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F5F7FA" Width="Auto" Height="Auto">

    <UserControl.Resources>
        <!-- Professional Card Style -->
        <SolidColorBrush x:Key="PrimaryDark" Color="#1E293B"/>
        <SolidColorBrush x:Key="PrimaryBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="AccentCyan" Color="#06B6D4"/>
        <SolidColorBrush x:Key="AccentPurple" Color="#8B5CF6"/>
        <SolidColorBrush x:Key="SuccessGreen" Color="#10B981"/>
        <SolidColorBrush x:Key="WarningOrange" Color="#F59E0B"/>
        <SolidColorBrush x:Key="DangerRed" Color="#EF4444"/>
        <SolidColorBrush x:Key="BackgroundLight" Color="#F8FAFC"/>
        <SolidColorBrush x:Key="SurfaceWhite" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderLight" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#0F172A"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#64748B"/>
        <SolidColorBrush x:Key="TextTertiary" Color="#94A3B8"/>

        <!-- Premium Shadows -->
        <DropShadowEffect x:Key="ShadowSm" BlurRadius="8" ShadowDepth="0" Color="#000000" Opacity="0.04"/>
        <DropShadowEffect x:Key="ShadowMd" BlurRadius="20" ShadowDepth="0" Color="#000000" Opacity="0.06"/>
        <DropShadowEffect x:Key="ShadowLg" BlurRadius="32" ShadowDepth="0" Color="#000000" Opacity="0.08"/>
        <DropShadowEffect x:Key="ShadowXl" BlurRadius="48" ShadowDepth="0" Color="#000000" Opacity="0.1"/>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.08" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F9FAFB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#F3F4F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toggle Button Style -->
        <Style x:Key="ToggleButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="ActiveToggleButtonStyle" TargetType="Button" BasedOn="{StaticResource ToggleButtonStyle}">
            <Setter Property="Background" Value="#EFF6FF"/>
            <Setter Property="BorderBrush" Value="#2563EB"/>
            <Setter Property="Foreground" Value="#2563EB"/>
        </Style>


        <Style x:Key="ModernComboBoxItemStyle" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border Background="{TemplateBinding Background}" 
                        Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F9FAFB"/>
                                <Setter Property="Foreground" Value="#2563EB"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#EFF6FF"/>
                                <Setter Property="Foreground" Value="#2563EB"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource SurfaceWhite}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderLight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                Focusable="false"
                                IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                ClickMode="Press"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="border"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="32"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0"
                                                        Margin="14,0,0,0"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"/>
                                                <Path Grid.Column="1"
                                            x:Name="Arrow"
                                            Data="M0,0 L4,4 L8,0"
                                            Stroke="{StaticResource TextSecondary}"
                                            StrokeThickness="2"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            RenderTransformOrigin="0.5,0.5">
                                                    <Path.RenderTransform>
                                                        <RotateTransform Angle="0"/>
                                                    </Path.RenderTransform>
                                                </Path>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="Arrow"
                                                                   Storyboard.TargetProperty="(Path.RenderTransform).(RotateTransform.Angle)"
                                                                   To="180"
                                                                   Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>
                                                <Trigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="Arrow"
                                                                   Storyboard.TargetProperty="(Path.RenderTransform).(RotateTransform.Angle)"
                                                                   To="0"
                                                                   Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.ExitActions>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite"
                                    IsHitTestVisible="False"
                                    Content="{TemplateBinding SelectionBoxItem}"
                                    ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                    Margin="14,0,32,0"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"/>
                            <Popup x:Name="Popup"
                         Placement="Bottom"
                         IsOpen="{TemplateBinding IsDropDownOpen}"
                         AllowsTransparency="True"
                         Focusable="False"
                         PopupAnimation="Fade">
                                <Border Background="{StaticResource SurfaceWhite}"
                              BorderBrush="{StaticResource BorderLight}"
                              BorderThickness="1"
                              CornerRadius="10"
                              Margin="0,4,0,0"
                              MinWidth="{TemplateBinding ActualWidth}"
                              Effect="{StaticResource ShadowLg}">
                                    <ScrollViewer Margin="4,6" MaxHeight="300">
                                        <StackPanel IsItemsHost="True"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button (Blue) -->
        <Style x:Key="BlueButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#2563EB"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1D4ED8"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                    <Setter Property="Background" Value="#E5E7EB"/>
                    <Setter Property="Foreground" Value="#9CA3AF"/>
                    <Setter Property="Cursor" Value="No"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Success Button (Green) -->
        <Style x:Key="GreenButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#10B981"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                    <Setter Property="Background" Value="#E5E7EB"/>
                    <Setter Property="Foreground" Value="#9CA3AF"/>
                    <Setter Property="Cursor" Value="No"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Danger Button (Red) -->
        <Style x:Key="RedButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#EF4444"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#EF4444"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DC2626"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                    <Setter Property="Background" Value="#E5E7EB"/>
                    <Setter Property="Foreground" Value="#9CA3AF"/>
                    <Setter Property="Cursor" Value="No"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Category Button Style -->
        <Style x:Key="CategoryButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F9FAFB"/>
                                <Setter Property="Foreground" Value="#2563EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#2563EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="White" Padding="24,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.05" Color="#000000"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Back Button & Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="BackButton" Click="CloseButton_Click" Background="Transparent" BorderThickness="0" Width="32" Height="32" Margin="0,0,16,0" Cursor="Hand">
                        <Path Data="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z" Fill="#6B7280" Stretch="Uniform" Width="16" Height="16"/>
                    </Button>
                    <StackPanel>
                        <TextBlock Text="Point de Vente" FontFamily="Segoe UI" FontSize="24" FontWeight="Bold" Foreground="#111827"/>
                        <TextBlock Text="Gérer les ventes et les transactions" FontFamily="Segoe UI" FontSize="13" Foreground="#6B7280" Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- User Info -->
                <Border Grid.Column="2" Background="#EFF6FF" CornerRadius="8" Padding="12,8">
                    <StackPanel Orientation="Horizontal">
                        <Border Background="#2563EB" Width="32" Height="32" CornerRadius="16" Margin="0,0,10,0">
                            <Path Data="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" 
                                  Fill="White" Stretch="Uniform" Width="16" Height="16"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock x:Name="CurrentUser" Text="User" FontFamily="Segoe UI" FontSize="13" FontWeight="SemiBold" Foreground="#1F2937"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Cart & Payment -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Cart Items -->
                <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Cart Header -->
                        <Grid Grid.Row="0" Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Articles du Panier" FontFamily="Segoe UI" FontSize="16" FontWeight="Bold" Foreground="#111827" VerticalAlignment="Center"/>
                            <Border Grid.Column="1" Background="#EFF6FF" CornerRadius="6" Padding="8,4">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:Name="ArticleCount" Text="0" FontFamily="Segoe UI" FontSize="13" FontWeight="Bold" Foreground="#2563EB"/>
                                    <TextBlock Text=" articles" FontFamily="Segoe UI" FontSize="13" Foreground="#6B7280" Margin="2,0,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Items List -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" >
                            <Grid>
                                <StackPanel x:Name="SelectedArticles"/>

                                <!-- Empty State -->
                                <Border x:Name="EmptyStateCart" Padding="0,40" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <StackPanel HorizontalAlignment="Center">
                                        <Border Background="#F3F4F6" Width="64" Height="64" CornerRadius="32" HorizontalAlignment="Center">
                                            <Path Data="M7 18c-1.1 0-1.99.9-1.99 2S5.9 22 7 22s2-.9 2-2-.9-2-2-2zM1 2v2h2l3.6 7.59-1.35 2.45c-.16.28-.25.61-.25.96 0 1.1.9 2 2 2h12v-2H7.42c-.14 0-.25-.11-.25-.25l.03-.12.9-1.63h7.45c.75 0 1.41-.41 1.75-1.03l3.58-6.49c.08-.14.12-.31.12-.48 0-.55-.45-1-1-1H5.21l-.94-2H1zm16 16c-1.1 0-1.99.9-1.99 2s.89 2 1.99 2 2-.9 2-2-.9-2-2-2z" 
                                                  Fill="#9CA3AF" Stretch="Uniform" Width="28" Height="28"/>
                                        </Border>
                                        <TextBlock Text="Aucun article dans le panier" FontFamily="Segoe UI" FontSize="14" Foreground="#6B7280" Margin="0,12,0,0" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </ScrollViewer>

                        <!-- Total Section -->
                        <Border Grid.Row="2" Background="#F9FAFB" CornerRadius="8" Padding="16" Margin="0,16,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0" Orientation="Horizontal">
                                    <TextBlock Text="Total" FontFamily="Segoe UI" FontSize="14" Foreground="#6B7280" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="TotalNet" Text="0.00 DH" FontFamily="Segoe UI" FontSize="24" FontWeight="Bold" Foreground="#111827" Margin="10,0,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- Payment Section -->
                <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <!-- Payment Method -->
                        <TextBlock Text="Méthode de Paiement" FontFamily="Segoe UI" FontSize="13" FontWeight="SemiBold" Foreground="#111827" Margin="0,0,0,10"/>
                        <Border Background="White" 
                                BorderBrush="#E5E7EB" 
                                BorderThickness="1" 
                                CornerRadius="8" 
                                Height="44">
                            <ComboBox x:Name="PaymentMethodComboBox" SelectedIndex="0"
                                      FontSize="14" 
                                      FontFamily="Segoe UI"
                                      Foreground="#1F2937"
                                      Margin="0"
                                      BorderThickness="0"
                                      Background="Transparent"
                                      VerticalContentAlignment="Center"
                                      Padding="12,0">
                                <ComboBox.Resources>
                                    <Style TargetType="ComboBoxItem">
                                        <Setter Property="Padding" Value="12,10"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F3F4F6"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#EFF6FF"/>
                                                <Setter Property="Foreground" Value="#2563EB"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ComboBox.Resources>
                            </ComboBox>
                        </Border>

                        <!-- Ticket Checkbox -->
                        <StackPanel Orientation="Horizontal">
                            <CheckBox x:Name="Ticket" IsChecked="True" Margin="0,0,10,16" >
                                <CheckBox.Template>
                                    <ControlTemplate TargetType="CheckBox">
                                        <StackPanel Orientation="Horizontal">
                                            <Border x:Name="Border" Width="20" Height="20" CornerRadius="6" BorderBrush="#E5E7EB" BorderThickness="2" Background="White" Margin="0,0,10,0">
                                                <Path x:Name="CheckMark" Data="M0 5 L7 12 L15 0" Stroke="#2563EB" StrokeThickness="2" Visibility="Collapsed" Stretch="Uniform"/>
                                            </Border>
                                            <TextBlock Text="Imprimer le Ticket" FontFamily="Segoe UI" FontSize="14" Foreground="#1F2937" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                                <Setter TargetName="Border" Property="Background" Value="#EFF6FF"/>
                                                <Setter TargetName="Border" Property="BorderBrush" Value="#2563EB"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </CheckBox.Template>
                            </CheckBox>
                            <CheckBox x:Name="Facture" IsChecked="True" Margin="0,0,0,16" >
                                <CheckBox.Template>
                                    <ControlTemplate TargetType="CheckBox">
                                        <StackPanel Orientation="Horizontal">
                                            <Border x:Name="Border" Width="20" Height="20" CornerRadius="6" BorderBrush="#E5E7EB" BorderThickness="2" Background="White" Margin="0,0,10,0">
                                                <Path x:Name="CheckMark" Data="M0 5 L7 12 L15 0" Stroke="#2563EB" StrokeThickness="2" Visibility="Collapsed" Stretch="Uniform"/>
                                            </Border>
                                            <TextBlock Text="Imprimer le Facture" FontFamily="Segoe UI" FontSize="14" Foreground="#1F2937" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                                <Setter TargetName="Border" Property="Background" Value="#EFF6FF"/>
                                                <Setter TargetName="Border" Property="BorderBrush" Value="#2563EB"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </CheckBox.Template>
                            </CheckBox>
                        </StackPanel>
                        <!-- Payment Buttons -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="CashButton" Grid.Column="0" Style="{StaticResource BlueButtonStyle}" Height="48" Click="CashButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Path Data="M21 18v1c0 1.1-.9 2-2 2H5c-1.11 0-2-.9-2-2V5c0-1.1.89-2 2-2h14c1.1 0 2 .9 2 2v1h-9c-1.11 0-2 .9-2 2v8c0 1.1.89 2 2 2h9zm-9-2h10V8H12v8zm4-2.5c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5z" 
                                          Fill="White" Stretch="Uniform" Width="18" Height="18" Margin="0,0,8,0"/>
                                    <TextBlock Text="Espèces" FontSize="14" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="CreditButton" Grid.Column="2" Style="{StaticResource GreenButtonStyle}" Height="48" Click="CreditButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Path Data="M20 4H4c-1.11 0-1.99.89-1.99 2L2 18c0 1.11.89 2 2 2h16c1.11 0 2-.89 2-2V6c0-1.11-.89-2-2-2zm0 14H4v-6h16v6zm0-10H4V6h16v2z" 
                                          Fill="White" Stretch="Uniform" Width="18" Height="18" Margin="0,0,8,0"/>
                                    <TextBlock Text="Crédit" FontSize="14" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                        <Button x:Name="HalfButton" Style="{StaticResource RedButtonStyle}" Height="48" Margin="0,8,0,0" Click="HalfButton_Click">
                            <TextBlock Text="Paiement 50/50" FontSize="14" FontWeight="SemiBold"/>
                        </Button>
                        <Button x:Name="DeleteButton" Style="{StaticResource ModernButtonStyle}" Height="44" Margin="0,8,0,0" Click="DeleteButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z" 
                                      Fill="#EF4444" Stretch="Uniform" Width="18" Height="18" Margin="0,0,8,0"/>
                                <TextBlock Text="Vider le Panier" FontSize="14" FontWeight="SemiBold" Foreground="#EF4444"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Right Panel - Products -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>


                <!-- Search & Product Info -->
                <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Bar -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Recherche de Produit" FontFamily="Segoe UI" FontSize="13" FontWeight="SemiBold" Foreground="#111827" Margin="0,0,0,8"/>
                            <Grid>
                                <TextBox x:Name="CodeBarreTextBox" MaxLength="18" Style="{StaticResource ModernTextBoxStyle}" Height="44" TextChanged="CodeBarreTextBox_TextChanged"/>
                                <Button x:Name="SearchButton" HorizontalAlignment="Right" Margin="4" Background="#2563EB" BorderThickness="0" Width="36" Height="36" Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                <Path Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z" 
                                                      Fill="White" Stretch="Uniform" Width="16" Height="16"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#1D4ED8"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>
                            <Border x:Name="SelectedArticle" Background="#FEF3C7" BorderBrush="#F59E0B" BorderThickness="1" CornerRadius="8" Padding="12" Margin="0,12,0,0">
                                <StackPanel>
                                    <TextBlock Text="Produit Sélectionné" FontFamily="Segoe UI" FontSize="11" Foreground="#92400E" Margin="0,0,0,4"/>
                                    <TextBlock x:Name="DesignationText" Text="Aucun produit sélectionné" FontFamily="Segoe UI" FontSize="13" FontWeight="SemiBold" Foreground="#78350F" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Quantity -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Quantité" FontFamily="Segoe UI" FontSize="13" FontWeight="SemiBold" Foreground="#111827" Margin="0,0,0,8"/>
                            <Border Background="#F9FAFB" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" Height="44" MouseLeftButtonDown="MyBorder_MouseLeftButtonDown" Cursor="Hand">
                                <TextBlock x:Name="ArticleQuantity" Text="1" FontFamily="Segoe UI" FontSize="20" FontWeight="Bold" Foreground="#111827" 
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <Button x:Name="KeyboardButton" Background="#10B981" Height="44" Margin="0,12,0,0" BorderThickness="0" Cursor="Hand" Click="KeyboardButton_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Path Data="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z" Fill="White" Stretch="Uniform" Width="18" Height="18" Margin="0,0,8,0"/>
                                                <TextBlock Text="Ajouter" FontFamily="Segoe UI" FontSize="14" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#059669"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Products Grid -->
                <!-- Products Grid -->
                <Border Grid.Row="2" Background="White" CornerRadius="12" Padding="20" Effect="{StaticResource ShadowMd}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Categories Sidebar -->
                        <Border Grid.Column="0" Background="#F9FAFB" CornerRadius="8" Padding="8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="Catégories" FontFamily="Segoe UI" FontSize="13" FontWeight="Bold" Foreground="#111827" Margin="8,8,8,12"/>
                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                    <StackPanel x:Name="FamillyContainer"/>
                                </ScrollViewer>
                            </Grid>
                        </Border>

                        <!-- Products List -->
                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Products Header -->
                            <!-- Products Header with Toolbar -->
                            <!-- Dans CMainV.xaml, modifiez la section Products Header (Grid.Row="0") pour ajouter le ComboBox de taille -->
                            <!-- Remplacez la section Grid.Column définitions par : -->

                            <Grid Grid.Row="0" Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Produits" FontFamily="Segoe UI" FontSize="16" FontWeight="Bold" Foreground="#111827" VerticalAlignment="Center"/>

                                <!-- Layout Toggle Buttons -->
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button x:Name="RowLayoutButton" 
                Content="Vue Liste" 
                Style="{StaticResource ActiveToggleButtonStyle}"
                Click="LayoutToggleButton_Click">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            CornerRadius="6,0,0,6"
                            Padding="10,6">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Path Data="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z" 
                                  Fill="{TemplateBinding Foreground}" 
                                  Stretch="Uniform" 
                                  Width="12" 
                                  Height="12" 
                                  Margin="0,0,4,0"/>
                                                        <TextBlock Text="{TemplateBinding Content}" 
                                       FontSize="12"
                                       VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <Button x:Name="CardLayoutButton" 
                Content="Vue Cartes" 
                Style="{StaticResource ToggleButtonStyle}"
                Click="LayoutToggleButton_Click">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            CornerRadius="0,6,6,0"
                            Padding="10,6">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Path Data="M4 8h4V4H4v4zm6 12h4v-4h-4v4zm-6 0h4v-4H4v4zm0-6h4v-4H4v4zm6 0h4v-4h-4v4zm6-10v4h4V4h-4zm-6 4h4V4h-4v4zm6 6h4v-4h-4v4zm0 6h4v-4h-4v4z" 
                                  Fill="{TemplateBinding Foreground}" 
                                  Stretch="Uniform" 
                                  Width="12" 
                                  Height="12" 
                                  Margin="0,0,4,0"/>
                                                        <TextBlock Text="{TemplateBinding Content}" 
                                       FontSize="12"
                                       VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </StackPanel>

                                <!-- Icon Size ComboBox -->
                                <ComboBox x:Name="IconSizeComboBox"
              Grid.Column="3"
              Style="{StaticResource ModernComboBoxStyle}"
              Width="160"
              SelectionChanged="IconSizeComboBox_SelectionChanged">
                                    <ComboBoxItem Content="Grandes icônes" Style="{StaticResource ModernComboBoxItemStyle}"/>
                                    <ComboBoxItem Content="Moyennes icônes" Style="{StaticResource ModernComboBoxItemStyle}"/>
                                    <ComboBoxItem Content="Petites icônes" Style="{StaticResource ModernComboBoxItemStyle}"/>
                                </ComboBox>

                                <!-- Sorting ComboBox -->
                                <ComboBox x:Name="SortComboBox" 
              Grid.Column="5"
              Style="{StaticResource ModernComboBoxStyle}"
              Width="200"
              SelectionChanged="SortComboBox_SelectionChanged"
              SelectedIndex="0">
                                    <ComboBoxItem Content="Nom (A-Z)" Style="{StaticResource ModernComboBoxItemStyle}"/>
                                    <ComboBoxItem Content="Nom (Z-A)" Style="{StaticResource ModernComboBoxItemStyle}"/>
                                    <ComboBoxItem Content="Prix croissant" Style="{StaticResource ModernComboBoxItemStyle}"/>
                                    <ComboBoxItem Content="Prix décroissant" Style="{StaticResource ModernComboBoxItemStyle}"/>
                                    <ComboBoxItem Content="Quantité croissante" Style="{StaticResource ModernComboBoxItemStyle}"/>
                                    <ComboBoxItem Content="Quantité décroissante" Style="{StaticResource ModernComboBoxItemStyle}"/>
                                    <ComboBoxItem Content="Plus récent au plus ancien" Style="{StaticResource ModernComboBoxItemStyle}"/>
                                    <ComboBoxItem Content="Plus ancien au plus récent" Style="{StaticResource ModernComboBoxItemStyle}"/>
                                </ComboBox>

                                <!-- Voir Tout Button -->
                                <Button Grid.Column="7" Content="Voir Tout" Background="White" BorderBrush="#E5E7EB" BorderThickness="1" 
            Padding="16,8" FontSize="13" FontWeight="SemiBold" Cursor="Hand" Click="Button_Click">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#F9FAFB"/>
                                                    <Setter Property="BorderBrush" Value="#2563EB"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>

                            <!-- Products Display Area -->
                            <ScrollViewer Grid.Row="1" 
                                          VerticalScrollBarVisibility="Auto" 
                                          HorizontalScrollBarVisibility="Auto">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Table Header (visible only in row layout) -->
                                    <!-- Table Header (visible only in row layout) -->
                                    <Border x:Name="TableHeader" 
        Grid.Row="0" 
        Background="#F9FAFB" 
        CornerRadius="8" 
        Padding="12,10" 
        Margin="0,0,0,8"
        Visibility="Visible">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="50" MinWidth="50"/>
                                                <ColumnDefinition Width="80" MinWidth="80"/>
                                                <ColumnDefinition Width="2*" MinWidth="150"/>
                                                <ColumnDefinition Width="80" MinWidth="80"/>
                                                <ColumnDefinition Width="100" MinWidth="100"/>
                                                <ColumnDefinition Width="100" MinWidth="100"/>
                                                <ColumnDefinition Width="100" MinWidth="100"/>
                                                <ColumnDefinition Width="80" MinWidth="80"/>
                                                <ColumnDefinition Width="120" MinWidth="120"/>
                                                <ColumnDefinition Width="100" MinWidth="100"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="Image" FontFamily="Segoe UI" FontSize="12" FontWeight="Bold" Foreground="#6B7280" Padding="8,0"/>
                                            <TextBlock Grid.Column="1" Text="ID" FontFamily="Segoe UI" FontSize="12" FontWeight="Bold" Foreground="#6B7280" Padding="8,0"/>
                                            <TextBlock Grid.Column="2" Text="Nom du Produit" FontFamily="Segoe UI" FontSize="12" FontWeight="Bold" Foreground="#6B7280" Padding="8,0"/>
                                            <TextBlock Grid.Column="3" Text="Stock" FontFamily="Segoe UI" FontSize="12" FontWeight="Bold" Foreground="#6B7280" Padding="8,0" TextAlignment="Right"/>
                                            <TextBlock Grid.Column="4" Text="Achat" FontFamily="Segoe UI" FontSize="12" FontWeight="Bold" Foreground="#6B7280" Padding="8,0" TextAlignment="Right"/>
                                            <TextBlock Grid.Column="5" Text="Vente" FontFamily="Segoe UI" FontSize="12" FontWeight="Bold" Foreground="#6B7280" Padding="8,0" TextAlignment="Right"/>
                                            <TextBlock Grid.Column="6" Text="Marché" FontFamily="Segoe UI" FontSize="12" FontWeight="Bold" Foreground="#6B7280" Padding="8,0" TextAlignment="Right"/>
                                            <TextBlock Grid.Column="7" Text="Famille" FontFamily="Segoe UI" FontSize="12" FontWeight="Bold" Foreground="#6B7280" Padding="8,0"/>
                                            <TextBlock Grid.Column="8" Text="Fournisseur" FontFamily="Segoe UI" FontSize="12" FontWeight="Bold" Foreground="#6B7280" Padding="8,0"/>
                                            <TextBlock Grid.Column="9" Text="Code" FontFamily="Segoe UI" FontSize="12" FontWeight="Bold" Foreground="#6B7280" Padding="8,0"/>
                                        </Grid>
                                    </Border>

                                    <!-- Container for articles (row or card layout) -->
                                    <StackPanel x:Name="ArticlesContainer" Grid.Row="1"/>
                                </Grid>
                            </ScrollViewer>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>