<Window x:Class="GestionComerce.Main.Vente.WAddCleint"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajout rapide de client"
        Height="Auto" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F8F9FA"
        WindowStyle="None"
        AllowsTransparency="True"
        SizeToContent="Height">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#6366F1"/>
        <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#5855EB"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#6B7280"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="TextBrush" Color="#374151"/>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Padding="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                <Setter Property="Background" Value="#FEFEFE"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#4F46E5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F9FAFB"/>
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#F3F4F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Label Style -->
        <Style x:Key="ModernLabel" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Title Style -->
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        </Style>

        <!-- CheckBox Style -->
        <Style x:Key="ModernCheckBox" TargetType="CheckBox">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource BackgroundBrush}"
            CornerRadius="16"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="#000000" 
                            Direction="270" 
                            ShadowDepth="4" 
                            BlurRadius="16" 
                            Opacity="0.1"/>
        </Border.Effect>

        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Grid Grid.Row="0" Margin="0,0,0,32">
                <TextBlock Text="Ajout rapide de client" 
                          Style="{StaticResource TitleStyle}"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center"/>
                <Button HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Width="32" Height="32"
                        Background="Transparent"
                        BorderThickness="0"
                        Content="✕"
                        FontSize="16"
                        Foreground="{StaticResource SecondaryBrush}"
                        Cursor="Hand"
                        Click="CancelButton_Click"/>
            </Grid>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="600">
                <StackPanel>
                    <!-- Company Type Checkbox -->
                    <StackPanel Margin="0,0,0,24">
                        <CheckBox x:Name="IsCompanyCheckBox" 
                                 Content="Est-ce une entreprise ?"
                                 Style="{StaticResource ModernCheckBox}"
                                 Checked="IsCompanyCheckBox_Changed"
                                 Unchecked="IsCompanyCheckBox_Changed"/>
                    </StackPanel>

                    <!-- Name Field -->
                    <StackPanel Margin="0,0,0,24">
                        <TextBlock x:Name="NameLabel" Text="Nom du client" Style="{StaticResource ModernLabel}"/>
                        <TextBox x:Name="NameTextBox" 
                                Style="{StaticResource ModernTextBox}"
                                Tag="Entrez le nom du client..." MaxLength="100"/>
                    </StackPanel>

                    <!-- Phone Field -->
                    <StackPanel Margin="0,0,0,24">
                        <TextBlock Text="Numéro de téléphone" Style="{StaticResource ModernLabel}"/>
                        <TextBox x:Name="PhoneTextBox" 
                                Style="{StaticResource ModernTextBox}" MaxLength="19"/>
                    </StackPanel>

                    <!-- Address Field -->
                    <StackPanel Margin="0,0,0,24">
                        <TextBlock Text="Adresse" Style="{StaticResource ModernLabel}"/>
                        <TextBox x:Name="AdresseTextBox" 
                                Style="{StaticResource ModernTextBox}" MaxLength="200"/>
                    </StackPanel>

                    <!-- Company Fields Section -->
                    <StackPanel x:Name="CompanyFieldsPanel" Visibility="Collapsed">
                        <!-- Legal Status -->
                        <StackPanel Margin="0,0,0,24">
                            <TextBlock Text="État juridique" Style="{StaticResource ModernLabel}"/>
                            <TextBox x:Name="EtatJuridiqueTextBox" 
                                    Style="{StaticResource ModernTextBox}" MaxLength="100"/>
                        </StackPanel>

                        <!-- ICE -->
                        <StackPanel Margin="0,0,0,24">
                            <TextBlock Text="ICE (Identifiant Commun de l'Entreprise)" Style="{StaticResource ModernLabel}"/>
                            <TextBox x:Name="ICETextBox" 
                                    Style="{StaticResource ModernTextBox}" MaxLength="50"/>
                        </StackPanel>

                        <!-- Company Headquarters -->
                        <StackPanel Margin="0,0,0,24">
                            <TextBlock Text="Siège d'entreprise" Style="{StaticResource ModernLabel}"/>
                            <TextBox x:Name="SiegeEntrepriseTextBox" 
                                    Style="{StaticResource ModernTextBox}" MaxLength="200"/>
                        </StackPanel>

                        <!-- Code -->
                        <StackPanel Margin="0,0,0,24">
                            <TextBlock Text="Code" Style="{StaticResource ModernLabel}"/>
                            <TextBox x:Name="CodeTextBox" 
                                    Style="{StaticResource ModernTextBox}" MaxLength="50"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Balance Field -->
                    <StackPanel Margin="0,0,0,32">
                        <TextBlock Text="Solde initial" Style="{StaticResource ModernLabel}"/>
                        <TextBox x:Name="BalanceTextBox" 
                                Style="{StaticResource ModernTextBox}" 
                                MaxLength="18"
                                PreviewTextInput="NumberOnly_PreviewTextInput"/>
                    </StackPanel>

                    <!-- Buttons -->
                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="CancelButton" 
                                Grid.Column="0"
                                Content="Annuler" 
                                Style="{StaticResource SecondaryButton}"
                                Click="CancelButton_Click"/>

                        <Button x:Name="AddButton" 
                                Grid.Column="2"
                                Content="Ajouter le client"
                                Style="{StaticResource PrimaryButton}"
                                Click="AddButton_Click"/>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>