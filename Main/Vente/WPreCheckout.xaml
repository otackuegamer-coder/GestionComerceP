<Window x:Class="GestionComerce.Main.Vente.WPreCheckout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Révision de la Commande" 
        Height="750" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA"
        ResizeMode="NoResize">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBlue" Color="#2563EB"/>
        <SolidColorBrush x:Key="SuccessGreen" Color="#10B981"/>
        <SolidColorBrush x:Key="DangerRed" Color="#EF4444"/>
        <SolidColorBrush x:Key="BorderLight" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#0F172A"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#64748B"/>

        <DropShadowEffect x:Key="ShadowMd" BlurRadius="20" ShadowDepth="0" Color="#000000" Opacity="0.06"/>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect" Value="{StaticResource ShadowMd}"/>
        </Style>

        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F9FAFB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BlueButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#2563EB"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1D4ED8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="GreenButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#10B981"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" CornerRadius="12" Padding="20" Margin="0,0,0,16" Effect="{StaticResource ShadowMd}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Révision de la Commande" FontFamily="Segoe UI" FontSize="24" FontWeight="Bold" Foreground="#111827"/>
                    <TextBlock Text="Vérifiez et modifiez votre commande avant de continuer" FontFamily="Segoe UI" FontSize="13" Foreground="#6B7280" Margin="0,4,0,0"/>
                </StackPanel>

                <Button Grid.Column="1" Content="Ajouter Article" Style="{StaticResource BlueButtonStyle}" Height="44" Padding="20,0" Click="AddArticleButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="+" FontSize="20" Margin="0,0,8,0" FontWeight="Bold"/>
                                    <TextBlock Text="Ajouter Article" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1D4ED8"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- Articles Table -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Table Header -->
                    <Border Grid.Row="0" Background="#F9FAFB" CornerRadius="8" Padding="16,12" Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" MinWidth="200"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Article" FontWeight="Bold" Foreground="#6B7280" FontSize="12"/>
                            <TextBlock Grid.Column="1" Text="P.U. (DH)" FontWeight="Bold" Foreground="#6B7280" FontSize="12" TextAlignment="Right"/>
                            <TextBlock Grid.Column="2" Text="Quantité" FontWeight="Bold" Foreground="#6B7280" FontSize="12" TextAlignment="Center"/>
                            <TextBlock Grid.Column="3" Text="Remise (%)" FontWeight="Bold" Foreground="#6B7280" FontSize="12" TextAlignment="Center"/>
                            <TextBlock Grid.Column="4" Text="Total (DH)" FontWeight="Bold" Foreground="#6B7280" FontSize="12" TextAlignment="Right"/>
                            <TextBlock Grid.Column="5" Text="Action" FontWeight="Bold" Foreground="#6B7280" FontSize="12" TextAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Articles List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <StackPanel x:Name="ArticlesContainer"/>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Summary and Client Panel -->
            <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Client Selection Section -->
                        <TextBlock Text="Sélection du Client" FontFamily="Segoe UI" FontSize="18" FontWeight="Bold" Foreground="#111827" Margin="0,0,0,12"/>

                        <!-- Search Box for Clients -->
                        <TextBox x:Name="ClientSearchBox" 
                                 Height="44" 
                                 FontSize="14" 
                                 Margin="0,0,0,8"
                                 TextChanged="ClientSearchBox_TextChanged">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="BorderBrush" Value="#E5E7EB"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Padding" Value="12,10"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}" 
                                                        CornerRadius="8">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" 
                                                                   Text="🔍" 
                                                                   FontSize="16" 
                                                                   Foreground="#94A3B8" 
                                                                   Margin="12,0,8,0" 
                                                                   VerticalAlignment="Center"/>
                                                        <ScrollViewer Grid.Column="1" 
                                                                      x:Name="PART_ContentHost" 
                                                                      VerticalAlignment="Center"
                                                                      Margin="0,0,12,0"/>
                                                        <TextBlock Grid.Column="1" 
                                                                   Text="Rechercher un client..." 
                                                                   FontSize="14" 
                                                                   Foreground="#94A3B8" 
                                                                   IsHitTestVisible="False" 
                                                                   VerticalAlignment="Center"
                                                                   Margin="0,0,12,0">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </Grid>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>

                        <ComboBox x:Name="ClientComboBox" Height="44" FontSize="14" Margin="0,0,0,8" SelectionChanged="ClientComboBox_SelectionChanged"/>

                        <Button Content="+ Nouveau Client" Style="{StaticResource ModernButtonStyle}" Height="40" Margin="0,0,0,16" Click="NewClientButton_Click"/>

                        <TextBlock x:Name="ClientSelectionRequired" Text="⚠️ Sélection de client requise" FontSize="12" Foreground="#EF4444" Margin="0,0,0,16" Visibility="Collapsed"/>

                        <!-- Client Info Panel -->
                        <Border x:Name="ClientInfoPanel" Background="#EBF4FF" CornerRadius="8" Padding="12" Margin="0,0,0,16" Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock Text="Client Sélectionné" FontSize="11" FontWeight="SemiBold" Foreground="#1D4ED8" Margin="0,0,0,8"/>
                                <TextBlock x:Name="ClientNameText" FontSize="14" FontWeight="SemiBold" Foreground="#111827" Margin="0,0,0,4"/>
                                <TextBlock x:Name="ClientPhoneText" FontSize="12" Foreground="#64748B" Margin="0,0,0,8"/>
                                <Separator Background="#CBD5E1" Margin="0,8"/>
                                <Grid Margin="0,8,0,0">
                                    <TextBlock Text="Remise Client" FontSize="12" Foreground="#64748B"/>
                                    <TextBlock x:Name="ClientDiscountValue" Text="0.00 %" FontSize="13" FontWeight="SemiBold" Foreground="#10B981" HorizontalAlignment="Right"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Separator Margin="0,0,0,16" Background="#E5E7EB"/>

                        <!-- Summary Section -->
                        <TextBlock Text="Résumé" FontFamily="Segoe UI" FontSize="18" FontWeight="Bold" Foreground="#111827" Margin="0,0,0,16"/>

                        <Border Background="#F9FAFB" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                            <StackPanel>
                                <Grid Margin="0,0,0,8">
                                    <TextBlock Text="Sous-total HT" FontSize="13" Foreground="#6B7280"/>
                                    <TextBlock x:Name="SubtotalText" Text="0.00 DH" FontSize="13" FontWeight="SemiBold" Foreground="#111827" HorizontalAlignment="Right"/>
                                </Grid>
                                <Grid Margin="0,0,0,8">
                                    <TextBlock Text="Remise totale" FontSize="13" Foreground="#6B7280"/>
                                    <TextBlock x:Name="TotalDiscountText" Text="0.00 DH" FontSize="13" FontWeight="SemiBold" Foreground="#EF4444" HorizontalAlignment="Right"/>
                                </Grid>
                                <Separator Margin="0,8" Background="#E5E7EB"/>
                                <Grid>
                                    <TextBlock Text="Total TTC" FontSize="15" FontWeight="Bold" Foreground="#111827"/>
                                    <TextBlock x:Name="TotalTTCText" Text="0.00 DH" FontSize="18" FontWeight="Bold" Foreground="#2563EB" HorizontalAlignment="Right"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Additional Discount -->
                        <TextBlock Text="Remise Supplémentaire" FontSize="13" FontWeight="SemiBold" Foreground="#111827" Margin="0,8,0,8"/>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="AdditionalDiscountTextBox" Grid.Column="0" Height="44" FontSize="14" TextAlignment="Right" Text="0" TextChanged="AdditionalDiscountTextBox_TextChanged">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="BorderBrush" Value="#E5E7EB"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="Padding" Value="12,10"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8">
                                                        <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <ComboBox x:Name="DiscountTypeComboBox" Grid.Column="2" Height="44" SelectedIndex="0" SelectionChanged="DiscountTypeComboBox_SelectionChanged">
                                <ComboBoxItem Content="%"/>
                                <ComboBoxItem Content="DH"/>
                            </ComboBox>
                        </Grid>

                        <!-- Credit Section (for 50/50 payment) -->
                        <StackPanel x:Name="CreditSection" Visibility="Collapsed">
                            <TextBlock Text="Montant du Crédit" FontSize="13" FontWeight="SemiBold" Foreground="#111827" Margin="0,0,0,8"/>
                            <TextBox x:Name="CreditTextBox" Height="44" FontSize="14" TextAlignment="Right" Text="0" Margin="0,0,0,16" TextChanged="CreditTextBox_TextChanged">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="BorderBrush" Value="#E5E7EB"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="Padding" Value="12,10"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8">
                                                        <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>

                        <!-- Payment Method -->
                        <TextBlock Text="Méthode de Paiement" FontSize="13" FontWeight="SemiBold" Foreground="#111827" Margin="0,0,0,8"/>
                        <TextBlock x:Name="PaymentMethodText" Text="Espèces" FontSize="14" Foreground="#6B7280" Background="#F9FAFB" Padding="12" TextWrapping="Wrap" Margin="0,0,0,8"/>

                        <!-- Payment Type -->
                        <TextBlock Text="Type de Paiement" FontSize="13" FontWeight="SemiBold" Foreground="#111827" Margin="0,8,0,8"/>
                        <TextBlock x:Name="PaymentTypeText" Text="VENTE COMPTANT" FontSize="14" FontWeight="SemiBold" Foreground="#2563EB" Background="#EBF4FF" Padding="12" TextWrapping="Wrap"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Footer Actions -->
        <Grid Grid.Row="2" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="Annuler" Style="{StaticResource ModernButtonStyle}" Height="48" Click="CancelButton_Click"/>
            <Button x:Name="ContinueButton" Grid.Column="2" Content="Confirmer et Payer" Style="{StaticResource GreenButtonStyle}" Height="48" Click="ContinueButton_Click"/>
        </Grid>
    </Grid>
</Window>