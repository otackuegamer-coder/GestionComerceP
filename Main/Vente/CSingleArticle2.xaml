<UserControl x:Class="GestionComerce.Main.Vente.CSingleArticle2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GestionComerce.Main.Vente"
             mc:Ignorable="d">

    <Grid Background="White" 
          Cursor="Hand"
          MouseLeftButtonDown="SelectedArticleClicked"
          Margin="0,0,0,8">
        <Grid.Style>
            <Style TargetType="Grid">
                <Setter Property="Background" Value="White"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#FEF2F2"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>

        <Border BorderBrush="#E5E7EB" 
                BorderThickness="0,0,0,1" 
                Padding="0,12"
                Background="Transparent">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left side: Product info -->
                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="ArticleName" 
                           FontFamily="Segoe UI"
                           FontSize="13" 
                           FontWeight="SemiBold"
                           Foreground="#1F2937" 
                           TextTrimming="CharacterEllipsis"
                           Margin="0,0,0,4"/>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="Fournisseur" 
                               FontFamily="Segoe UI"
                               FontSize="11" 
                               Foreground="#6B7280" 
                               TextTrimming="CharacterEllipsis"
                               Margin="0,0,8,0"/>

                        <TextBlock Text="•" 
                               FontSize="11" 
                               Foreground="#D1D5DB" 
                               Margin="0,0,8,0"/>

                        <TextBlock FontFamily="Segoe UI"
                               FontSize="11" 
                               Foreground="#059669"
                               FontWeight="Medium">
                        <Run Text="DH "/>
                        <Run x:Name="Prix" Text=""/>
                        </TextBlock>

                        <TextBlock Text=" × " 
                               FontSize="11" 
                               Foreground="#9CA3AF" 
                               Margin="4,0"/>

                        <TextBlock x:Name="Quantite" 
                               FontFamily="Segoe UI"
                               FontSize="11" 
                               Foreground="#374151"
                               FontWeight="Medium"/>
                    </StackPanel>
                </StackPanel>

                <!-- Right side: Total price -->
                <Border Grid.Column="1" 
                    Background="#FEE2E2" 
                    CornerRadius="6" 
                    Padding="8,4"
                    Margin="8,0,0,0">
                    <TextBlock FontFamily="Segoe UI"
                           FontSize="13" 
                           FontWeight="Bold"
                           Foreground="#DC2626">
                    <Run Text="DH "/>
                    <Run x:Name="Total" Text=""/>
                    </TextBlock>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>