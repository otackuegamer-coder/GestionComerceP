<Window x:Class="GestionComerce.Vente.WFacturePreview"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aperçu du Ticket" Height="700" Width="400"
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None" 
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">

    <Border Background="#F5F5F5" 
            CornerRadius="12" 
            BorderThickness="1" 
            BorderBrush="#D1D5DB"
            Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Info Header -->
            <Border Grid.Row="0" Background="#2C3E50" Padding="15" CornerRadius="12,12,0,0">
                <TextBlock Text="APERÇU DU TICKET" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"/>
            </Border>

            <!-- Ticket Content (80mm thermal receipt style) -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <Border Background="White" Margin="20" Padding="0">
                    <!-- Thermal Receipt Paper Style -->
                    <Border x:Name="ticketArea" 
                        Background="White" 
                        BorderBrush="#CCCCCC" 
                        BorderThickness="1"
                        Width="302"
                        Padding="15">
                        <StackPanel>
                            <!-- Logo (centered, small) -->
                            <Image x:Name="imgLogo" 
                               Height="60" 
                               Stretch="Uniform"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                            <!-- Company Name -->
                            <TextBlock x:Name="txtCompanyName" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,5"/>

                            <!-- Company Address -->
                            <TextBlock x:Name="txtCompanyAddress" 
                                   FontSize="10" 
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,3"/>

                            <!-- Company Phone -->
                            <TextBlock x:Name="txtCompanyPhone" 
                                   FontSize="10" 
                                   TextAlignment="Center"
                                   Margin="0,0,0,3"/>

                            <!-- Company Email -->
                            <TextBlock x:Name="txtCompanyEmail" 
                                   FontSize="10" 
                                   TextAlignment="Center"
                                   Margin="0,0,0,10"/>

                            <!-- Separator Line -->
                            <Border BorderBrush="Black" BorderThickness="0,1,0,0" Margin="0,5,0,5"/>

                            <!-- Invoice Number and Date -->
                            <TextBlock FontSize="11" FontWeight="Bold" TextAlignment="Center" Margin="0,5,0,2">
                            <Run Text="FACTURE N° "/><Run x:Name="txtInvoiceNumber"/>
                            </TextBlock>
                            <TextBlock x:Name="txtInvoiceDate" 
                                   FontSize="10" 
                                   TextAlignment="Center"
                                   Margin="0,0,0,5"/>

                            <!-- Client Info (if exists) -->
                            <TextBlock x:Name="txtClientInfo"
                                   Text="Client: Client Exemple" 
                                   FontSize="10" 
                                   TextAlignment="Left"
                                   Margin="0,5,0,2"/>

                            <!-- Separator Line -->
                            <Border BorderBrush="Black" BorderThickness="0,1,0,0" Margin="0,5,0,5"/>

                            <!-- Articles Header -->
                            <Grid Margin="0,5,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="ARTICLE" FontSize="9" FontWeight="Bold"/>
                                <TextBlock Grid.Column="1" Text="QTE" FontSize="9" FontWeight="Bold" TextAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text="P.U" FontSize="9" FontWeight="Bold" TextAlignment="Right"/>
                                <TextBlock Grid.Column="3" Text="TOTAL" FontSize="9" FontWeight="Bold" TextAlignment="Right"/>
                            </Grid>

                            <!-- Dotted Line -->
                            <TextBlock x:Name="articlesDivider" Text="- - - - - - - - - - - - - - - - - - - - - - - - - -" 
                                   FontSize="9" 
                                   Margin="0,0,0,5"/>

                            <!-- Articles will be inserted here dynamically -->

                            <!-- Dotted Line (after articles) -->
                            <TextBlock x:Name="totalsTopDivider" Text="- - - - - - - - - - - - - - - - - - - - - - - - - -" 
                                   FontSize="9" 
                                   Margin="0,5,0,5"/>

                            <!-- Totals Section -->
                            <Grid x:Name="gridSubtotal" Margin="0,5,0,3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="SOUS-TOTAL:" FontSize="11"/>
                                <TextBlock Grid.Column="1" x:Name="txtSubtotal" Text="250.00 DH" FontSize="11" FontWeight="SemiBold" TextAlignment="Right"/>
                            </Grid>

                            <Grid x:Name="gridRemise" Margin="0,0,0,3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="REMISE:" FontSize="11"/>
                                <TextBlock Grid.Column="1" x:Name="txtRemise" Text="-10.00 DH" FontSize="11" FontWeight="SemiBold" TextAlignment="Right"/>
                            </Grid>

                            <Grid x:Name="gridTax" Margin="0,0,0,3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" x:Name="txtTaxLabel" Text="TVA (20%):" FontSize="11"/>
                                <TextBlock Grid.Column="1" x:Name="txtTax" Text="48.00 DH" FontSize="11" FontWeight="SemiBold" TextAlignment="Right"/>
                            </Grid>

                            <!-- Bold Separator -->
                            <Border BorderBrush="Black" BorderThickness="0,2,0,0" Margin="0,8,0,8"/>

                            <!-- TOTAL -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="TOTAL:" FontSize="14" FontWeight="Bold"/>
                                <TextBlock Grid.Column="1" x:Name="txtTotal" Text="288.00 DH" FontSize="14" FontWeight="Bold" TextAlignment="Right"/>
                            </Grid>

                            <!-- Bold Separator -->
                            <Border BorderBrush="Black" BorderThickness="0,2,0,0" Margin="0,0,0,10"/>

                            <!-- Payment Method -->
                            <TextBlock x:Name="txtPaymentMethod"
                                   Text="Mode de paiement: ESPECE" 
                                   FontSize="10" 
                                   TextAlignment="Center"
                                   Margin="0,0,0,10"/>

                            <!-- Terms and Conditions (if short) -->
                            <TextBlock x:Name="txtTermsAndConditions" 
                                   FontSize="9" 
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Foreground="#666666"
                                   Margin="0,5,0,10"/>

                            <!-- Separator Line -->
                            <Border BorderBrush="Black" BorderThickness="0,1,0,0" Margin="0,5,0,10"/>

                            <!-- Footer Message -->
                            <TextBlock x:Name="txtFooter" 
                                   FontSize="11" 
                                   FontWeight="Bold"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,10"/>

                            <!-- Barcode placeholder or ID -->
                            <TextBlock x:Name="txtBarcode"
                                   Text="* FAC-000001 *" 
                                   FontSize="12" 
                                   FontFamily="Consolas"
                                   TextAlignment="Center"
                                   Margin="0,5,0,0"/>

                        </StackPanel>
                    </Border>
                </Border>
            </ScrollViewer>

            <!-- Action Buttons -->
            <Border Grid.Row="2" 
                Background="White" 
                Padding="15" 
                BorderBrush="#CCCCCC" 
                BorderThickness="0,1,0,0"
                CornerRadius="0,0,12,12">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="btnConfirm" 
                        Content="CONFIRMER ET IMPRIMER" 
                        Padding="30,12" 
                        FontSize="13" 
                        Background="#27AE60" 
                        Foreground="White" 
                        FontWeight="SemiBold" 
                        BorderThickness="0" 
                        Cursor="Hand"
                        Margin="0,0,10,0"
                        Click="BtnConfirm_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="btnCancel" 
                        Content="ANNULER" 
                        Padding="30,12" 
                        FontSize="13" 
                        Background="#E74C3C" 
                        Foreground="White" 
                        FontWeight="SemiBold" 
                        BorderThickness="0" 
                        Cursor="Hand"
                        Click="BtnCancel_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>